# EditorConfig para BioDeskPro2

root = true

# Configurações gerais para todos os arquivos
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos C#
[*.cs]
indent_style = space
indent_size = 4
tab_width = 4

# Regras de análise de código C#

