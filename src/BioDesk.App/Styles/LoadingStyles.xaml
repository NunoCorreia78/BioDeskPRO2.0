<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════════════════════
         BioDeskPro2 - Loading States Visuais Modernos
         Paleta de cores terrosa pastel consistente
    ═══════════════════════════════════════════════════════════════════════════════════ -->

    <!-- Loading Overlay - Fundo semi-transparente durante carregamento -->
    <Style x:Key="LoadingOverlay" TargetType="Grid">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="Panel.ZIndex" Value="999"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Modern Progress Ring - Anel de progresso moderno -->
    <Style x:Key="ModernProgressRing" TargetType="Ellipse">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="StrokeThickness" Value="4"/>
        <Setter Property="Stroke" Value="#9CAF97"/>
        <Setter Property="StrokeDashArray" Value="15,5"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                From="0" To="360" Duration="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Loading Text Style -->
    <Style x:Key="LoadingText" TargetType="TextBlock">
        <Setter Property="Text" Value="A carregar..."/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#3F4A3D"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>

    <!-- Loading Button State -->
    <Style x:Key="LoadingButton" TargetType="Button">
        <Setter Property="Background" Value="#9CAF97"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                <Setter Property="Content" Value="A processar..."/>
                <Setter Property="Background" Value="#879B83"/>
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="Cursor" Value="Wait"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Error Message Style -->
    <Style x:Key="ErrorMessage" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#D32F2F"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                <Setter Property="Visibility" Value="Collapsed"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding ErrorMessage, Converter={x:Null}}" Value="{x:Null}">
                <Setter Property="Visibility" Value="Collapsed"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Success Message Style -->
    <Style x:Key="SuccessMessage" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#388E3C"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Skeleton Loading for Lists -->
    <Style x:Key="SkeletonLoading" TargetType="Rectangle">
        <Setter Property="Fill" Value="#E3E9DE"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="RadiusX" Value="2"/>
        <Setter Property="RadiusY" Value="2"/>
    </Style>

    <!-- Pulse Animation for Skeleton -->
    <Style x:Key="PulseAnimation" TargetType="Rectangle" BasedOn="{StaticResource SkeletonLoading}">
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0.3" To="0.8" Duration="0:0:1.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>