<UserControl x:Class="BioDesk.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BioDesk.ViewModels;assembly=BioDesk.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" 
             d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel, IsDesignTimeCreatable=False}">

    <Grid>
        <!-- Fundo gradiente nativo -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FCFDFB" Offset="0"/>
                <GradientStop Color="#F2F5F0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Ações Principais -->
            <RowDefinition Height="*"/>    <!-- Conteúdo -->
        </Grid.RowDefinitions>

        <!-- Header com Status -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E3E9DE" BorderThickness="0,0,0,1" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título e Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" 
                              Foreground="#3F4A3D" Margin="0,0,32,0"/>
                    
                    <!-- Status Devices com bordas nativas -->
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#E8F5E8" Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#4CAF50" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding StatusConexao}" FontSize="12" Foreground="#2E7D32"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF3E0" Padding="8,4" Margin="0,0,8,0">
                            <TextBlock Text="Dispositivos: Offline" FontSize="12" Foreground="#F57C00"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Relógio -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding HoraAtual, StringFormat='{}{0:HH:mm:ss}'}" 
                              FontSize="20" FontWeight="Medium" Foreground="#3F4A3D" 
                              HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding DataFormatadaPT}" 
                              FontSize="12" Foreground="#5A6558" 
                              HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Ações Principais com botões nativos WPF -->
        <Grid Grid.Row="1" Margin="24,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Novo Paciente - Estilo nativo -->
            <Button Grid.Column="0" Command="{Binding NovoPacienteCommand}"
                    Style="{StaticResource BotaoPrincipalStyle}"
                    Background="White" BorderBrush="#E3E9DE" BorderThickness="2"
                    Padding="20" Height="120">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="👤" FontSize="32" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <TextBlock Text="Novo Paciente" FontSize="16" FontWeight="SemiBold" 
                              Foreground="#3F4A3D" HorizontalAlignment="Center"/>
                    <TextBlock Text="Criar nova ficha" FontSize="12" 
                              Foreground="#5A6558" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>

            <!-- Lista Pacientes - Estilo nativo -->
            <Button Grid.Column="2" Command="{Binding AbrirListaPacientesCommand}"
                    Style="{StaticResource BotaoPrincipalStyle}"
                    Background="White" BorderBrush="#E3E9DE" BorderThickness="2"
                    Padding="20" Height="120">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="📋" FontSize="32" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <TextBlock Text="Lista Pacientes" FontSize="16" FontWeight="SemiBold" 
                              Foreground="#3F4A3D" HorizontalAlignment="Center"/>
                    <TextBlock Text="Ver todos os registos" FontSize="12" 
                              Foreground="#5A6558" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Button>

            <!-- Pesquisa Rápida - Cartão nativo -->
            <Border Grid.Column="4" Style="{StaticResource CartaoStyle}">
                <StackPanel>
                    <TextBlock Text="🔍 Pesquisa Rápida" FontSize="16" FontWeight="SemiBold" 
                              Foreground="#3F4A3D" Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                 Text="{Binding PesquisarTexto, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14" Padding="12,8" Height="36"
                                 Background="#F7F9F6" BorderBrush="#E3E9DE" BorderThickness="1"
                                 ToolTip="Digite nome, email ou telefone..."/>
                        
                        <Button Grid.Column="1" Command="{Binding PesquisarCommand}"
                                Style="{StaticResource BotaoPrincipalStyle}"
                                Background="#9CAF97" Foreground="White" BorderThickness="0"
                                Padding="12,8" Margin="8,0,0,0" Height="36">
                            <TextBlock Text="Buscar" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Conteúdo Principal com cartões nativos -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pacientes Recentes -->
            <Border Grid.Column="0" Style="{StaticResource CartaoStyle}">
                <StackPanel>
                    <TextBlock Text="📝 Pacientes Recentes" FontSize="18" FontWeight="SemiBold" 
                              Foreground="#3F4A3D" Margin="0,0,0,16"/>
                    
                    <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding PacientesRecentes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SelecionarPacienteRecenteCommand, 
                                                     RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0"
                                            Padding="12,8" Margin="0,0,0,4"
                                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F7F9F6"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar simples com Border nativo -->
                                            <Border Grid.Column="0" Background="#9CAF97" 
                                                    Width="32" Height="32" 
                                                    Margin="0,0,12,0">
                                                <TextBlock Text="👤" FontSize="14" 
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Nome}" FontWeight="SemiBold" 
                                                          Foreground="#3F4A3D"/>
                                                <TextBlock Text="{Binding DataUltimaAtualizacao, StringFormat='Última atualização: {0:dd/MM/yyyy HH:mm}'}" 
                                                          FontSize="11" Foreground="#5A6558"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Atividade & Links -->
            <Border Grid.Column="2" Style="{StaticResource CartaoStyle}">
                <StackPanel>
                    <TextBlock Text="⚡ Atividade Recente" FontSize="18" FontWeight="SemiBold" 
                              Foreground="#3F4A3D" Margin="0,0,0,16"/>
                    
                    <!-- Links Rápidos com botões nativos -->
                    <StackPanel>
                        <Button Background="Transparent" BorderThickness="0" 
                               HorizontalAlignment="Left" Padding="0,6" Margin="0,4" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Relatórios pendentes" Foreground="#5A6558" 
                                          TextDecorations="Underline"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Background="Transparent" BorderThickness="0" 
                               HorizontalAlignment="Left" Padding="0,6" Margin="0,4" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📧" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Documentos enviados" Foreground="#5A6558" 
                                          TextDecorations="Underline"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Background="Transparent" BorderThickness="0" 
                               HorizontalAlignment="Left" Padding="0,6" Margin="0,4" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Configurações do sistema" Foreground="#5A6558" 
                                          TextDecorations="Underline"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay - simples e nativo -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" 
                            Foreground="#9CAF97"/>
                <TextBlock Text="A carregar dados..." Foreground="White" 
                          HorizontalAlignment="Center" Margin="0,12,0,0"/>
            </StackPanel>
        </Border>

        <!-- Error Overlay - simples e nativo -->
        <Border Grid.RowSpan="3" Background="#80FF4444" 
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverterCollapsed}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="❌ Erro" FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="White" 
                          HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>