<UserControl x:Class="BioDesk.App.Views.Abas.ComunicacaoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BioDesk.ViewModels.Abas;assembly=BioDesk.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ComunicacaoViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header com status de conexão -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="📧 Comunicação e Seguimento" FontSize="20" FontWeight="Bold" Foreground="#3F4A3D" VerticalAlignment="Center"/>

            <!-- Indicador Online/Offline -->
            <Border Padding="8,4" CornerRadius="4" Margin="16,0,0,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TemConexao}" Value="False">
                                <Setter Property="Background" Value="#F44336"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="12">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="🟢 Online"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TemConexao}" Value="False">
                                    <Setter Property="Text" Value="🔴 Offline"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>

            <!-- Badge fila -->
            <Border Background="#FFA726" Padding="8,4" CornerRadius="4" Margin="8,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MensagensNaFila}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding MensagensNaFila, Converter={x:Null}, FallbackValue=0}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="12">
                    <Run Text="📬"/>
                    <Run Text="{Binding MensagensNaFila, Mode=OneWay}"/>
                    <Run Text="na fila"/>
                </TextBlock>
            </Border>
        </StackPanel>

        <!-- Estatísticas -->
        <Border Grid.Row="1" Background="#F7F9F6" Padding="16" CornerRadius="8" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📊 Estatísticas" FontSize="14" FontWeight="SemiBold" Foreground="#3F4A3D" Margin="0,0,0,8"/>
                    <TextBlock Foreground="#5A6558" FontSize="12">
                        <Run Text="✉️"/>
                        <Run Text="{Binding TotalEmails, Mode=OneWay}"/>
                        <Run Text="Emails"/>
                    </TextBlock>
                    <TextBlock Foreground="#5A6558" FontSize="12">
                        <Run Text="📱"/>
                        <Run Text="{Binding TotalSMS, Mode=OneWay}"/>
                        <Run Text="SMS"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="📈 Taxa de Abertura" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding TaxaAbertura, StringFormat='{}{0:P0}'}" FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="🕐 Última Comunicação" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding UltimaComunicacao, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="14" FontWeight="SemiBold" Foreground="#3F4A3D"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="⏰ Próximo Follow-up" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding ProximoFollowUp, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="14" FontWeight="SemiBold" Foreground="#FF9800"/>
                </StackPanel>

                <!-- ⭐ NOVO: Botão Abrir Pasta Paciente -->
                <Button Grid.Column="4"
                        Command="{Binding AbrirPastaPacienteCommand}"
                        Background="#2196F3"
                        Foreground="White"
                        Padding="12,8"
                        Margin="16,0,0,0"
                        Cursor="Hand"
                        BorderThickness="0"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="📂" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Abrir Pasta" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Conteúdo principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Formulário de envio -->
            <Border Grid.Column="0" Background="#F7F9F6" Padding="16" CornerRadius="8" Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="📤 Enviar Nova Comunicação" FontSize="16" FontWeight="SemiBold" Foreground="#3F4A3D" Margin="0,0,0,12"/>

                        <TextBlock Text="Para:" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Destinatario, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Background="White"
                                 BorderBrush="#E3E9DE"
                                 Margin="0,0,0,12"/>
                        <!-- ℹ️ NOTA: Destinatario preenchido automaticamente pelo ViewModel quando PacienteAtual muda -->

                        <TextBlock Text="Template:" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Templates}" SelectedItem="{Binding TemplateSelecionado}" Padding="8" Margin="0,0,0,12"/>

                        <TextBlock Text="Assunto:" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Assunto, UpdateSourceTrigger=PropertyChanged}" Padding="8" Background="White" BorderBrush="#E3E9DE" Margin="0,0,0,12"/>

                        <TextBlock Text="Mensagem:" FontSize="12" Foreground="#5A6558" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Corpo, UpdateSourceTrigger=PropertyChanged}"
                                 Height="200"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 Background="White"
                                 BorderBrush="#E3E9DE"
                                 Margin="0,0,0,12"/>

                        <!-- ⭐ NOVO: Secção de anexos -->
                        <StackPanel Margin="0,0,0,12">
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="📎 Anexos:" FontSize="12" Foreground="#5A6558" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                <Button Command="{Binding AdicionarAnexoCommand}"
                                        Background="#9CAF97"
                                        Foreground="White"
                                        Padding="8,4"
                                        Margin="12,0,0,0"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        DockPanel.Dock="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📎" Margin="0,0,4,0"/>
                                        <TextBlock Text="Anexar Ficheiro"/>
                                    </StackPanel>
                                </Button>
                                <TextBlock Text="{Binding StatusAnexos}"
                                           FontSize="11"
                                           Foreground="#5A6558"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           DockPanel.Dock="Left"/>
                            </DockPanel>

                            <!-- Lista de anexos -->
                            <ItemsControl ItemsSource="{Binding Anexos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                BorderBrush="#E3E9DE"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="0,0,0,4">
                                            <DockPanel>
                                                <Button DockPanel.Dock="Right"
                                                        Command="{Binding DataContext.RemoverAnexoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Foreground="#F44336"
                                                        Cursor="Hand"
                                                        Padding="4">
                                                    <TextBlock Text="❌" FontSize="12"/>
                                                </Button>
                                                <TextBlock Text="{Binding}"
                                                           FontSize="11"
                                                           Foreground="#3F4A3D"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding}"/>
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <CheckBox IsChecked="{Binding AgendarFollowUp}" Content="Agendar follow-up automático" Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16" Visibility="{Binding AgendarFollowUp, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Em" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding DiasFollowUp}" Width="50" Padding="4"/>
                            <TextBlock Text="dias" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>

                        <Button Command="{Binding EnviarEmailCommand}" Background="#9CAF97" Foreground="White" Padding="16,12" Cursor="Hand" BorderThickness="0">
                            <TextBlock Text="📤 Enviar Email" FontWeight="SemiBold"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Histórico -->
            <Border Grid.Column="1" Background="#F7F9F6" Padding="16" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="📜 Histórico de Comunicações" FontSize="16" FontWeight="SemiBold" Foreground="#3F4A3D" Margin="0,0,0,12"/>

                    <DataGrid ItemsSource="{Binding HistoricoComunicacoes}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="White"
                              AlternatingRowBackground="#F7F9F6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding DataCriacao, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Assunto" Binding="{Binding Assunto}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" IsReadOnly="True"/>

                            <!-- ⭐ NOVO: Coluna com botão Cancelar para emails Agendados -->
                            <DataGridTemplateColumn Header="Ações" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.CancelarEmailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#F44336"
                                                Foreground="White"
                                                Padding="6,3"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                FontSize="10">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <!-- ⚡ CORRETO: StatusComunicacao.Agendado = 2 -->
                                                        <DataTrigger Binding="{Binding Status}" Value="2">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <TextBlock Text="🚫 Cancelar"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
