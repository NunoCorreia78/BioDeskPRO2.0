<UserControl x:Class="BioDesk.App.Views.Abas.ConsentimentosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:BioDesk.App.Converters"
             d:DesignHeight="800" d:DesignWidth="1000"
             mc:Ignorable="d"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>

        <!-- Estilos modernos para a nova interface -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#3F4A3D"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="SubSectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#5A6558"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ChipStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="Border"
                                Background="#F7F9F6"
                                BorderBrush="#E3E9DE"
                                BorderThickness="1"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#9CAF97"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E3E9DE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="0,8,0,12"/>
            <Setter Property="Height" Value="25"/>
        </Style>
    </UserControl.Resources>

    <!-- === NOVA INTERFACE CLÍNICA OTIMIZADA === -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="900">

            <!-- Cabeçalho Principal -->
            <TextBlock Text="🏥 AVALIAÇÃO CLÍNICA ESTRUTURADA"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#3F4A3D"
                       Margin="0,0,0,30"/>

            <!-- === 1. MOTIVOS DA CONSULTA === -->
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20"
                    BorderBrush="#E3E9DE" BorderThickness="1">
                <StackPanel>

                    <TextBlock Text="📋 1. MOTIVOS DA CONSULTA" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Motivos (Multi-select chips) -->
                    <TextBlock Text="Motivos principais:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel Margin="0,0,0,20">
                        <CheckBox Content="Dor lombar" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Cervicalgia" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Cefaleias" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Ansiedade" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Stress" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Fadiga" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Refluxo" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Dispepsia" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Obstipação" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Diarreia" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Intolerâncias" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Alergias" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Insónia" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Dores articulares" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Outro" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                    <!-- Intensidade (Slider 0-10) -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Intensidade da dor (0-10):" Style="{StaticResource SubSectionHeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" x:Name="IntensidadeSlider" Minimum="0" Maximum="10" Value="5"
                                    Style="{StaticResource SliderStyle}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=IntensidadeSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                       FontWeight="Bold" FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- Características da dor -->
                    <TextBlock Text="Caráter da dor:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel>
                        <CheckBox Content="Pulsátil" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Queimação" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Pressão" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Pontada" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Cólica" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Constante" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Intermitente" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                </StackPanel>
            </Border>

            <!-- === 2. HISTÓRIA CLÍNICA PASSADA === -->
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20"
                    BorderBrush="#E3E9DE" BorderThickness="1">
                <StackPanel>

                    <TextBlock Text="📋 2. HISTÓRIA CLÍNICA PASSADA" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Doenças crónicas -->
                    <TextBlock Text="Doenças crónicas:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel Margin="0,0,0,20">
                        <CheckBox Content="Nenhuma" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Hipertensão" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Diabetes" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Dislipidemia" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Cardiopatia" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Asma" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Artrite" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Depressão" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Ansiedade" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Outro" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                    <!-- Medicação atual -->
                    <TextBlock Text="Medicação/Suplementação atual:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel>
                        <CheckBox Content="Sem medicação crónica" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Anti-hipertensores" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Antidiabéticos" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Analgésicos" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Vitaminas" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Probióticos" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Outro" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                </StackPanel>
            </Border>

            <!-- === 3. ESTILO DE VIDA === -->
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20"
                    BorderBrush="#E3E9DE" BorderThickness="1">
                <StackPanel>

                    <TextBlock Text="🏃 3. ESTILO DE VIDA" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Alimentação -->
                    <TextBlock Text="Padrão alimentar:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel Margin="0,0,0,15">
                        <CheckBox Content="Mediterrânea" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Vegetariana" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Omnívora" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Sem restrições" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Irregular" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                    <!-- Exercício -->
                    <TextBlock Text="Actividade física:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel Margin="0,0,0,15">
                        <CheckBox Content="Sedentário" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Ligeira" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Moderada" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Intensa" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Atleta" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                    <!-- Stress -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Nível de stress (0-10):" Style="{StaticResource SubSectionHeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" x:Name="StressSlider" Minimum="0" Maximum="10" Value="5"
                                    Style="{StaticResource SliderStyle}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=StressSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                       FontWeight="Bold" FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- Qualidade do sono -->
                    <TextBlock Text="Qualidade do sono:" Style="{StaticResource SubSectionHeaderStyle}"/>
                    <WrapPanel>
                        <CheckBox Content="Boa" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Razoável" Style="{StaticResource ChipStyle}"/>
                        <CheckBox Content="Má" Style="{StaticResource ChipStyle}"/>
                    </WrapPanel>

                </StackPanel>
            </Border>

            <!-- === FRASES RÁPIDAS === -->
            <Border Background="#F0FDF4" CornerRadius="12" Padding="20" Margin="0,0,0,20"
                    BorderBrush="#059669" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="⚡ FRASES RÁPIDAS"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="#059669" Margin="0,0,0,10"/>

                    <WrapPanel>
                        <Button Content="✅ Sem alergias conhecidas"
                                Background="#059669" Foreground="White"
                                BorderThickness="0" Padding="12,6" Margin="0,0,8,8"
                                FontSize="12">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="✅ Sem medicação crónica"
                                Background="#059669" Foreground="White"
                                BorderThickness="0" Padding="12,6" Margin="0,0,8,8"
                                FontSize="12">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- === BOTÕES DE AÇÃO === -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="💾 GUARDAR AVALIAÇÃO"
                        Background="#9CAF97" Foreground="White"
                        BorderThickness="0" Padding="20,12" Margin="0,0,10,0"
                        FontWeight="SemiBold" FontSize="14">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#879B83"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Content="📄 GERAR DECLARAÇÃO"
                        Background="#059669" Foreground="White"
                        BorderThickness="0" Padding="20,12"
                        FontWeight="SemiBold" FontSize="14">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#047857"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </StackPanel>
    </ScrollViewer>

</UserControl>
