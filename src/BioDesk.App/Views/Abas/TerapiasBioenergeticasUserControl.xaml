              Margin="0,4,0,0"
              FontSize="12"
              Foreground="{StaticResource TextoSecundario}"
              Text="Algoritmo CoRe 5.0: 10 amostras RNG por protocolo â†’ mÃ©dia normalizada 0-100%" />
          </StackPanel>

          <!--  BotÃ£o Scan Values  -->
          <Button
            Grid.Row="1"
            Height="40"
            Margin="0,0,0,12"
            HorizontalAlignment="Left"
            Command="{Binding ScanValuesCommand}"
            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
