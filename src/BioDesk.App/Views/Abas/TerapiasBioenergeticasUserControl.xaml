            CanUserDeleteRows="False"
            IsReadOnly="False"
            ItemsSource="{Binding ProtocolosScanned}"
            SelectionMode="Extended">
            <DataGrid.Columns>
              <!--  CheckBox SeleÃ§Ã£o  -->
