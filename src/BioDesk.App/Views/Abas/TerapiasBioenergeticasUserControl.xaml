                Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                Header="âœ“" />

              <!--  Nome Protocolo  -->
              <DataGridTextColumn
                Width="*"
                Binding="{Binding Nome}"
                Header="Nome do Protocolo"
                IsReadOnly="True" />

              <!--  Value %  -->
              <DataGridTextColumn
                Width="100"
                Binding="{Binding ValuePercent, StringFormat='{}{0:N2}%'}"
                Header="Value %"
                IsReadOnly="True">
                <DataGridTextColumn.ElementStyle>
