<UserControl x:Class="BioDesk.App.Views.Abas.TerapiaBioenergeticaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BioDesk.ViewModels.Abas;assembly=BioDesk.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:TerapiaBioenergeticaViewModel}"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1600"
             Background="#FCFDFB">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Cores terroso pastel -->
        <SolidColorBrush x:Key="TextoPrincipal">#3F4A3D</SolidColorBrush>
        <SolidColorBrush x:Key="TextoSecundario">#5A6558</SolidColorBrush>
        <SolidColorBrush x:Key="BotaoPrincipal">#9CAF97</SolidColorBrush>
        <SolidColorBrush x:Key="BotaoHover">#879B83</SolidColorBrush>
        <SolidColorBrush x:Key="Cartao">#F7F9F6</SolidColorBrush>
        <SolidColorBrush x:Key="Borda">#E3E9DE</SolidColorBrush>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Checklist pré-sessão -->
            <RowDefinition Height="*"/>    <!-- 3 Colunas -->
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- HEADER: TÍTULO + PACIENTE ATIVO -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="{StaticResource Cartao}" BorderBrush="{StaticResource Borda}" 
                BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🌿 Terapias Bioenergéticas (Inergetix-CoRe)" 
                               FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextoPrincipal}"/>
                    <TextBlock Text="Scan ressonante, emissão sequencial e biofeedback em tempo real" 
                               FontSize="14" Foreground="{StaticResource TextoSecundario}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Paciente Ativo -->
                <Border Grid.Column="1" Background="#E8F5E9" BorderBrush="#81C784" BorderThickness="2" 
                        CornerRadius="8" Padding="16,12" Visibility="{Binding PacienteValido, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="👤 PACIENTE ATIVO" FontSize="10" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding PacienteAtual.NomeCompleto}" FontSize="16" FontWeight="SemiBold" Foreground="#1B5E20"/>
                    </StackPanel>
                </Border>

                <!-- Aviso: Paciente não selecionado -->
                <Border Grid.Column="1" Background="#FFEBEE" BorderBrush="#E57373" BorderThickness="2" 
                        CornerRadius="8" Padding="16,12" Visibility="{Binding PacienteValido, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="⚠️ NENHUM PACIENTE" FontSize="10" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,4"/>
                        <TextBlock Text="Abra a ficha do paciente primeiro" FontSize="13" Foreground="#B71C1C"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- CHECKLIST PRÉ-SESSÃO -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="1" Background="{StaticResource Cartao}" BorderBrush="{StaticResource Borda}" 
                BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <WrapPanel Orientation="Horizontal">
                <TextBlock Text="✓ Checklist pré-sessão:" FontSize="14" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextoPrincipal}" Margin="0,0,20,0" VerticalAlignment="Center"/>
                
                <CheckBox Content="Consentimento assinado" IsChecked="{Binding ConsentimentoAssinado}" Margin="0,0,20,0"/>
                <CheckBox Content="Dispositivo pronto" IsChecked="{Binding DispositivoPronto}" Margin="0,0,20,0"/>
                <CheckBox Content="Protocolo válido" IsChecked="{Binding ProtocoloValido}" Margin="0,0,20,0"/>
                <CheckBox Content="Limites V/mA OK" IsChecked="{Binding LimitesOk}" Margin="0,0,20,0"/>

                <Button Content="▶️ Iniciar Sessão" Command="{Binding IniciarEmissaoCommand}" 
                        Background="{StaticResource BotaoPrincipal}" Foreground="White" 
                        Padding="20,8" Margin="20,0,0,0" FontWeight="SemiBold" BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BotaoHover}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </WrapPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- 3 COLUNAS: CATÁLOGO | CONTROLO | VISUALIZAÇÃO -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/> <!-- Coluna 1: Catálogo & Fila -->
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>    <!-- Coluna 2: Controlo -->
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1.2*"/> <!-- Coluna 3: Visualização -->
            </Grid.ColumnDefinitions>

            <!-- ═════════════════════════════════════════════════════════ -->
            <!-- COLUNA 1: CATÁLOGO & FILA -->
            <!-- ═════════════════════════════════════════════════════════ -->
            <Border Grid.Column="0" Background="{StaticResource Cartao}" BorderBrush="{StaticResource Borda}" 
                    BorderThickness="1" CornerRadius="12" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Título + Botão Importar -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="📚 Catálogo de Protocolos" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextoPrincipal}" VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="1" Content="📥 Importar Excel" Command="{Binding ImportarProtocolosExcelCommand}" 
                                Background="{StaticResource BotaoPrincipal}" Foreground="White" Padding="12,6" 
                                BorderThickness="0" Cursor="Hand" FontSize="12"/>
                    </Grid>

                    <!-- Lista de Protocolos -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Pesquisa -->
                            <TextBox Text="{Binding PesquisaProtocolo, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" Margin="0,0,0,8" BorderBrush="{StaticResource Borda}" 
                                     BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="🔍 Pesquisar protocolos..." 
                                                                          Foreground="{StaticResource TextoSecundario}" 
                                                                          Margin="4,0,0,0" Opacity="0.6"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Lista de Protocolos (Placeholder) -->
                            <TextBlock Text="(Protocolos aparecerão aqui após importação Excel)" 
                                       Foreground="{StaticResource TextoSecundario}" 
                                       FontStyle="Italic" Margin="8"/>
                            
                            <!-- TODO: ItemsControl com Protocolos -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Divisor -->
                    <Border Grid.Row="2" Height="1" Background="{StaticResource Borda}" Margin="0,16"/>

                    <!-- Fila de Emissão -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="🔄 Fila de Emissão Sequencial" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextoPrincipal}" 
                                   Margin="0,0,0,8"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="(Adicione protocolos ou frequências ressonantes)" 
                                           Foreground="{StaticResource TextoSecundario}" FontStyle="Italic" Margin="8"/>
                                
                                <!-- TODO: ItemsControl com FilaEmissao -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <!-- ═════════════════════════════════════════════════════════ -->
            <!-- COLUNA 2: CONTROLO DE SAÍDA -->
            <!-- ═════════════════════════════════════════════════════════ -->
            <Border Grid.Column="2" Background="{StaticResource Cartao}" BorderBrush="{StaticResource Borda}" 
                    BorderThickness="1" CornerRadius="12" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="⚙️ Controlo de Saída (AWG HS3)" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextoPrincipal}" Margin="0,0,0,16"/>

                        <!-- Frequência -->
                        <TextBlock Text="Frequência (Hz)" Foreground="{StaticResource TextoSecundario}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding FrequenciaAtualHz}" Padding="8" Margin="0,0,0,12" 
                                 BorderBrush="{StaticResource Borda}" BorderThickness="1"/>

                        <!-- Amplitude -->
                        <TextBlock Text="Amplitude (V)" Foreground="{StaticResource TextoSecundario}" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Slider Value="{Binding AmplitudeV}" Minimum="0" Maximum="20" Width="150" 
                                    TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AmplitudeV, StringFormat={}{0:F1} V}" 
                                       FontWeight="SemiBold" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Limite Corrente -->
                        <TextBlock Text="Limite Corrente (mA)" Foreground="{StaticResource TextoSecundario}" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Slider Value="{Binding LimiteCorrenteMa}" Minimum="0" Maximum="50" Width="150" 
                                    TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding LimiteCorrenteMa, StringFormat={}{0:F1} mA}" 
                                       FontWeight="SemiBold" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Forma de Onda -->
                        <TextBlock Text="Forma de Onda" Foreground="{StaticResource TextoSecundario}" Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding FormaOnda}" Padding="8" Margin="0,0,0,12" 
                                  BorderBrush="{StaticResource Borda}" BorderThickness="1">
                            <ComboBoxItem Content="Sine" IsSelected="True"/>
                            <ComboBoxItem Content="Square"/>
                            <ComboBoxItem Content="Triangle"/>
                            <ComboBoxItem Content="Saw"/>
                        </ComboBox>

                        <!-- Modulação -->
                        <TextBlock Text="Modulação" Foreground="{StaticResource TextoSecundario}" Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding Modulacao}" Padding="8" Margin="0,0,0,12" 
                                  BorderBrush="{StaticResource Borda}" BorderThickness="1">
                            <ComboBoxItem Content="None" IsSelected="True"/>
                            <ComboBoxItem Content="AM"/>
                            <ComboBoxItem Content="FM"/>
                            <ComboBoxItem Content="Burst"/>
                        </ComboBox>

                        <!-- Canal -->
                        <TextBlock Text="Canal" Foreground="{StaticResource TextoSecundario}" Margin="0,0,0,4"/>
                        <ComboBox SelectedIndex="{Binding Canal, Converter={StaticResource IntToIndexConverter}}" 
                                  Padding="8" Margin="0,0,0,16" 
                                  BorderBrush="{StaticResource Borda}" BorderThickness="1">
                            <ComboBoxItem Content="Canal 1"/>
                            <ComboBoxItem Content="Canal 2"/>
                        </ComboBox>

                        <!-- Botões de Controlo -->
                        <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                            <Button Content="⏸️ Pausar" Command="{Binding PausarEmissaoCommand}" 
                                    Background="#FFA726" Foreground="White" Padding="12,8" Margin="0,0,0,8" 
                                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" 
                                    IsEnabled="{Binding EmissaoAtiva}"/>
                            
                            <Button Content="⏹️ Parar" Command="{Binding PararEmissaoCommand}" 
                                    Background="#E57373" Foreground="White" Padding="12,8" 
                                    FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" 
                                    IsEnabled="{Binding EmissaoAtiva}"/>
                        </StackPanel>

                        <!-- Botão Scan Ressonante -->
                        <Border Background="#E3F2FD" BorderBrush="#42A5F5" BorderThickness="2" 
                                CornerRadius="8" Padding="12" Margin="0,24,0,0">
                            <StackPanel>
                                <TextBlock Text="🔍 SCAN RESSONANTE" FontSize="12" FontWeight="Bold" 
                                           Foreground="#1565C0" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Limiar de relevância (Value %)" 
                                           Foreground="{StaticResource TextoSecundario}" FontSize="11" Margin="0,0,0,4"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Slider Value="{Binding LimiarRelevancia}" Minimum="0" Maximum="100" Width="120" 
                                            TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding LimiarRelevancia, StringFormat={}{0:F0}%}" 
                                               FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Button Content="▶️ Iniciar Scan" Command="{Binding IniciarScanRessonanteCommand}" 
                                        Background="#42A5F5" Foreground="White" Padding="12,6" 
                                        FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ═════════════════════════════════════════════════════════ -->
            <!-- COLUNA 3: VISUALIZAÇÃO TEMPO REAL -->
            <!-- ═════════════════════════════════════════════════════════ -->
            <Border Grid.Column="4" Background="{StaticResource Cartao}" BorderBrush="{StaticResource Borda}" 
                    BorderThickness="1" CornerRadius="12" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0" Text="📊 Biofeedback Tempo Real" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextoPrincipal}" Margin="0,0,0,16"/>

                    <!-- Área de Visualização (Placeholder para gráfico FFT) -->
                    <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource Borda}" 
                            BorderThickness="1" CornerRadius="8" Margin="0,0,0,16">
                        <Grid>
                            <TextBlock Text="📈 FFT / Forma de Onda" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Foreground="{StaticResource TextoSecundario}" FontStyle="Italic"/>
                            
                            <!-- TODO: Implementar gráfico FFT com LiveCharts ou similar -->
                        </Grid>
                    </Border>

                    <!-- Indicadores -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Indicador: RMS -->
                        <Border Grid.Row="0" Grid.Column="0" Background="#E8F5E9" BorderBrush="#81C784" 
                                BorderThickness="1" CornerRadius="6" Padding="8" Margin="0,0,4,4">
                            <StackPanel>
                                <TextBlock Text="RMS" FontSize="10" Foreground="#2E7D32" FontWeight="Bold"/>
                                <TextBlock Text="{Binding RmsAtual, StringFormat={}{0:F2} mV}" 
                                           FontSize="16" FontWeight="SemiBold" Foreground="#1B5E20"/>
                            </StackPanel>
                        </Border>

                        <!-- Indicador: Pico -->
                        <Border Grid.Row="0" Grid.Column="1" Background="#FFF3E0" BorderBrush="#FFB74D" 
                                BorderThickness="1" CornerRadius="6" Padding="8" Margin="4,0,0,4">
                            <StackPanel>
                                <TextBlock Text="PICO" FontSize="10" Foreground="#E65100" FontWeight="Bold"/>
                                <TextBlock Text="{Binding PicoAtual, StringFormat={}{0:F2} mV}" 
                                           FontSize="16" FontWeight="SemiBold" Foreground="#BF360C"/>
                            </StackPanel>
                        </Border>

                        <!-- Indicador: Freq. Dominante -->
                        <Border Grid.Row="1" Grid.Column="0" Background="#E3F2FD" BorderBrush="#42A5F5" 
                                BorderThickness="1" CornerRadius="6" Padding="8" Margin="0,0,4,4">
                            <StackPanel>
                                <TextBlock Text="FREQ. DOMINANTE" FontSize="10" Foreground="#0D47A1" FontWeight="Bold"/>
                                <TextBlock Text="{Binding FrequenciaDominanteHz, StringFormat={}{0:F1} Hz}" 
                                           FontSize="16" FontWeight="SemiBold" Foreground="#01579B"/>
                            </StackPanel>
                        </Border>

                        <!-- Indicador: Impedância -->
                        <Border Grid.Row="1" Grid.Column="1" Background="#F3E5F5" BorderBrush="#BA68C8" 
                                BorderThickness="1" CornerRadius="6" Padding="8" Margin="4,0,0,4">
                            <StackPanel>
                                <TextBlock Text="IMPEDÂNCIA" FontSize="10" Foreground="#6A1B9A" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ImpedanciaOhms, StringFormat={}{0:F0} Ω}" 
                                           FontSize="16" FontWeight="SemiBold" Foreground="#4A148C"/>
                            </StackPanel>
                        </Border>

                        <!-- Indicador: Improvement % -->
                        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#C8E6C9" BorderBrush="#66BB6A" 
                                BorderThickness="2" CornerRadius="8" Padding="12" Margin="0,8,0,8">
                            <StackPanel>
                                <TextBlock Text="IMPROVEMENT %" FontSize="12" Foreground="#2E7D32" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ImprovementPctAtual, StringFormat={}{0:F1}%}" 
                                           FontSize="28" FontWeight="Bold" Foreground="#1B5E20" 
                                           HorizontalAlignment="Center"/>
                                <ProgressBar Value="{Binding ImprovementPctAtual}" Maximum="100" Height="8" 
                                             Margin="0,8,0,0" Foreground="#66BB6A" Background="#E8F5E9"/>
                            </StackPanel>
                        </Border>

                        <!-- Tempo Decorrido -->
                        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#FFF9C4" BorderBrush="#FDD835" 
                                BorderThickness="1" CornerRadius="6" Padding="8" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⏱️ " FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TempoDecorridoSeg}" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="#F57F17" VerticalAlignment="Center"/>
                                <TextBlock Text=" / " FontSize="14" Foreground="{StaticResource TextoSecundario}" 
                                           VerticalAlignment="Center" Margin="4,0"/>
                                <TextBlock Text="{Binding TempoTotalSeg}" FontSize="14" 
                                           Foreground="{StaticResource TextoSecundario}" VerticalAlignment="Center"/>
                                <TextBlock Text=" seg" FontSize="14" Foreground="{StaticResource TextoSecundario}" 
                                           VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Botão Exportar -->
                        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="📄 Exportar Relatório" 
                                Command="{Binding ExportarRelatorioCommand}" 
                                Background="{StaticResource BotaoPrincipal}" Foreground="White" 
                                Padding="12,8" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
