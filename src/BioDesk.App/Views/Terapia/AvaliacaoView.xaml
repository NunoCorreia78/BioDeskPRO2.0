<UserControl
    x:Class="BioDesk.App.Views.Terapia.AvaliacaoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BioDesk.ViewModels.UserControls.Terapia;assembly=BioDesk.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:AvaliacaoViewModel}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <GroupBox Header="Configuracao do scan" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center" Content="Fonte da semente:" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="28"
                        ItemsSource="{Binding SeedSources}"
                        SelectedItem="{Binding SelectedSeedSource, Mode=TwoWay}"
                        Margin="0,0,0,10" />

                    <Label Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center" Content="Gerador RNG:" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="28"
                        ItemsSource="{Binding RngEngines}"
                        SelectedItem="{Binding SelectedRngEngine, Mode=TwoWay}"
                        Margin="0,0,0,10" />

                    <Label Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center" Content="Filtrar categoria:" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="28"
                        ItemsSource="{Binding CategoryFilters}"
                        SelectedItem="{Binding SelectedCategoryFilter, Mode=TwoWay}"
                        Margin="0,0,0,10"
                        ToolTip="Filtrar resultados por categoria especÃ­fica" />

                    <Label Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center" Content="Salt da sessao:" />
                    <DockPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
                        <TextBox
                            MinWidth="220"
                            Text="{Binding SessionSalt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                            Margin="8,0,0,0"
                            Content="Regenerar"
                            Command="{Binding RegenerateSaltCommand}" />
                    </DockPanel>

                    <Label Grid.Row="4" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Content="Iteracoes:" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="120"
                        Text="{Binding Iterations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Button Width="140" Margin="0,0,10,0" Content="Executar scan" Command="{Binding RunScanCommand}" />
                <Button
                    Width="180"
                    Margin="0,0,10,0"
                    Content="Adicionar a lista ativa"
                    Command="{Binding AddSelectedToActiveListCommand}" />
                <Button Width="140" Content="Guardar sessao" Command="{Binding SaveSessionCommand}" />
            </StackPanel>

            <GroupBox Header="Resultados">
                <DataGrid
                    Margin="10"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding Results}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Binding="{Binding Name}" Header="Nome" />
                        <DataGridTextColumn Width="140" Binding="{Binding Code}" Header="Codigo" />
                        <DataGridTextColumn Width="120" Binding="{Binding Category}" Header="Categoria" />
                        <DataGridTextColumn
                            Width="110"
                            Binding="{Binding ScorePercent, StringFormat='{}{0:N1}%'}"
                            Header="Score" />
                        <DataGridTextColumn Width="70" Binding="{Binding Rank}" Header="Rank" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
