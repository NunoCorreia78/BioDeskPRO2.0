<UserControl
    x:Class="BioDesk.App.Views.Terapia.ProgramasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BioDesk.ViewModels.UserControls.Terapia;assembly=BioDesk.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:ProgramasViewModel}"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox
                Width="260"
                Margin="0,0,10,0"
                Text="{Binding ExcelPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="📥 COLE AQUI o caminho completo do ficheiro Excel com frequências&#x0a;Exemplo: C:\ProgramData\BioDeskPro2\Templates\Frequencias\MeuProtocolo.xlsx&#x0a;&#x0a;Formato esperado: Colunas Nome_Programa, Hz, Duty, Segundos, Notas" />
            <Button Width="110" Margin="0,0,10,0" Content="Importar Excel" Command="{Binding ImportExcelCommand}" 
                    ToolTip="Importar protocolos de frequências do ficheiro Excel&#x0a;Lê primeira folha e guarda na base de dados" />
            <TextBox
                Width="200"
                Margin="0,0,10,0"
                Text="{Binding Search, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="🔍 Pesquisar protocolos por nome&#x0a;Filtro case-insensitive" />
            <Button Width="110" Content="Atualizar" Command="{Binding RefreshProgramsCommand}" 
                    ToolTip="Recarregar lista de protocolos da base de dados" />
        </StackPanel>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="📋 Programas Importados">
            <ListBox
                Margin="10"
                ItemsSource="{Binding Programs}"
                SelectedItem="{Binding SelectedProgram, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                ToolTip="Lista de protocolos importados do Excel&#x0a;Clique para ver passos à direita" />
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="2" Header="⚡ Passos do Programa Selecionado">
            <DockPanel Margin="10">
                <Button
                    DockPanel.Dock="Top"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Content="➕ Adicionar à Lista Ativa"
                    Command="{Binding AddProgramToActiveListCommand}"
                    ToolTip="Adiciona TODOS os passos deste programa à Lista Ativa&#x0a;Depois aplique no sub-separador Biofeedback" />
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding SelectedProgramSteps}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="50" Binding="{Binding Index}" Header="#" />
                        <DataGridTextColumn Width="120" Binding="{Binding Hz, StringFormat='{}{0:N1} Hz'}" Header="Hz" />
                        <DataGridTextColumn Width="80" Binding="{Binding Duty, StringFormat='{}{0:N0}%'}" Header="Duty" />
                        <DataGridTextColumn Width="90" Binding="{Binding Seconds}" Header="Segundos" />
                        <DataGridTextColumn Width="*" Binding="{Binding Notes}" Header="Notas" />
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>
