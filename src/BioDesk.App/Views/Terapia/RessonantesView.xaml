<UserControl
    x:Class="BioDesk.App.Views.Terapia.RessonantesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BioDesk.ViewModels.UserControls.Terapia;assembly=BioDesk.ViewModels"
    xmlns:controls="clr-namespace:BioDesk.App.Controls"
    d:DataContext="{d:DesignInstance Type=vm:RessonantesViewModel}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Controlos compactos -->
            <RowDefinition Height="Auto"/> <!-- Progresso -->
            <RowDefinition Height="*"/>    <!-- Configuração Sweep + Tabela -->
        </Grid.RowDefinitions>

        <!-- ROW 0: CONTROLOS COMPACTOS -->
        <controls:TerapiaControlosCompactoUserControl x:Name="TerapiaControlosCompacto"
                                                      Grid.Row="0"
                                                      VoltagemV="5.0"
                                                      DuracaoTotalMinutos="30"
                                                      TempoFrequenciaSegundos="10"
                                                      AjusteHz="0"
                                                      TextoBotao="Iniciar Ressonantes"
                                                      IniciarClick="TerapiaControlos_IniciarClick"
                                                      PararClick="TerapiaControlos_PararClick"
                                                      Margin="0,0,0,15"/>

        <!-- ROW 1: PROGRESSO (sem linha de programa) -->
        <controls:TerapiaProgressoUserControl x:Name="TerapiaProgresso"
                                              Grid.Row="1"
                                              TerapiaEmAndamento="{Binding TerapiaEmAndamento}"
                                              FrequenciaAtualHz="{Binding FrequenciaAtualHz}"
                                              FrequenciaOriginalHz="{Binding FrequenciaOriginalHz}"
                                              AjusteAplicadoHz="{Binding AjusteHz}"
                                              MostrarPrograma="False"
                                              FrequenciaAtualIndex="{Binding FrequenciaAtualIndex}"
                                              TotalFrequencias="{Binding TotalFrequencias}"
                                              ProgressoPercentual="{Binding ProgressoPercentual}"
                                              TempoRestanteFormatado="{Binding TempoRestanteFormatado}"
                                              Margin="0,0,0,15"/>

        <!-- ROW 2: Configuração Sweep + Tabela Resultados -->
        <Border Grid.Row="2"
                Background="{DynamicResource Cartao}"
                BorderBrush="{DynamicResource Borda}"
                BorderThickness="2"
                CornerRadius="8"
                Padding="15">
            <DockPanel>
                <!-- Cabeçalho + Config Sweep -->
                <StackPanel DockPanel.Dock="Top"
                        Margin="0,0,0,15">
                    <TextBlock Text="SCAN RESSONANTE"
                               FontSize="16"
                            FontWeight="SemiBold"
                               Foreground="{DynamicResource TextoPrincipal}"
                               Margin="0,0,0,15"/>

                    <!-- Configuração Sweep em linha horizontal -->
                    <WrapPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal"
                                Margin="0,0,15,0">
                            <TextBlock Text="Início:"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Width="45"/>
                            <TextBox Text="{Binding StartHz, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                    Height="30"
                                    VerticalContentAlignment="Center"
                                    Padding="5,0"/>
                            <TextBlock Text="Hz"
                                    VerticalAlignment="Center"
                                    Margin="3,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                Margin="0,0,15,0">
                            <TextBlock Text="Fim:"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Width="35"/>
                            <TextBox Text="{Binding StopHz, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                    Height="30"
                                    VerticalContentAlignment="Center"
                                    Padding="5,0"/>
                            <TextBlock Text="Hz"
                                    VerticalAlignment="Center"
                                    Margin="3,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                Margin="0,0,15,0">
                            <TextBlock Text="Passo:"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Width="45"/>
                            <TextBox Text="{Binding StepHz, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="60"
                                    Height="30"
                                    VerticalContentAlignment="Center"
                                    Padding="5,0"/>
                            <TextBlock Text="Hz"
                                    VerticalAlignment="Center"
                                    Margin="3,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Dwell:"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Width="45"/>
                            <TextBox Text="{Binding DwellMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="60"
                                    Height="30"
                                    VerticalContentAlignment="Center"
                                    Padding="5,0"/>
                            <TextBlock Text="ms"
                                    VerticalAlignment="Center"
                                    Margin="3,0,0,0"/>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Botão Executar Sweep -->
                    <Button Content="🔍 Executar Sweep"
                            Command="{Binding RunSweepCommand}"
                            Height="35"
                            Margin="0,0,0,5"
                            Background="#7B8FA3"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                            Value="True">
                                        <Setter Property="Background"
                                                Value="#6A7D91"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="💡 Selecione frequências ressonantes (Ctrl+Click ou Shift+Click para múltiplas)"
                               FontSize="10"
                               Foreground="{DynamicResource TextoSecundario}"/>
                </StackPanel>

                <!-- Tabela de Resultados com Checkboxes -->
                <Border BorderBrush="#E3E9DE"
                        BorderThickness="1"
                        CornerRadius="4">
                    <DataGrid x:Name="ResultadosDataGrid"
                              ItemsSource="{Binding SweepResults}"
                              SelectedItem="{Binding SelectedPoint, Mode=TwoWay}"
                              SelectionMode="Extended"
                              SelectionChanged="ResultadosDataGrid_SelectionChanged"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F9FAFB"
                              RowHeight="35">
                        <DataGrid.Columns>
                            <!-- Hz Column -->
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding Hz, StringFormat='{}{0:N2} Hz'}"
                                                Header="Frequência (Hz)"/>

                            <!-- Score Column -->
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding Score, StringFormat='{}{0:N1}%'}"
                                                Header="Score %"/>

                            <!-- Status Column -->
                            <DataGridTextColumn Width="180"
                                                Binding="{Binding Status}"
                                                Header="Status"/>

                            <!-- Progress Bar Column -->
                            <DataGridTemplateColumn Header="Progresso"
                                    Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ProgressBar Value="{Binding ProgressoIndividual}"
                                                         Height="20"
                                                         Foreground="#9CAF97"
                                                         Background="#E3E9DE"/>
                                            <TextBlock Text="{Binding ProgressoIndividual, StringFormat='{}{0:F0}%'}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextoPrincipal}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Tempo Restante Column -->
                            <DataGridTextColumn Width="70"
                                                Binding="{Binding TempoRestante, StringFormat='{}{0}s'}"
                                                Header="Tempo"/>

                            <!-- Notes Column -->
                            <DataGridTextColumn Width="*"
                                                Binding="{Binding Notes}"
                                                Header="Notas"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
