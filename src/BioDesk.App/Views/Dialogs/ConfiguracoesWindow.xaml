<Window
    x:Class="BioDesk.App.Views.Dialogs.ConfiguracoesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BioDesk.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BioDesk.ViewModels;assembly=BioDesk.ViewModels"
    Title="Configurações da Clínica"
    Width="700"
    Height="650"
    d:DataContext="{d:DesignInstance Type=viewmodels:ConfiguracaoClinicaViewModel}"
    Background="#F7F9F6"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Converters  -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        <!--  Estilo local para labels  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource TextoPrincipal}" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Título  -->
            <RowDefinition Height="*" />
            <!--  Conteúdo  -->
            <RowDefinition Height="Auto" />
            <!--  Botões  -->
        </Grid.RowDefinitions>

        <!--  Título  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="#3F4A3D"
                Text="Configurações da Clínica" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="13"
                Foreground="#5A6558"
                Text="Configure os dados da clínica que aparecerão nos documentos e PDFs" />
        </StackPanel>

        <!--  TabControl para organizar configurações  -->
        <TabControl
            Grid.Row="1"
            Margin="0,0,0,20"
            Background="{StaticResource FundoCartao}"
            BorderBrush="{StaticResource BordaBrush}"
            BorderThickness="1">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                    <Setter Property="Foreground" Value="#5A6558" />
                    <Setter Property="Padding" Value="15,8" />
                    <Setter Property="Margin" Value="2,0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource TextoPrincipal}" />
                            <Setter Property="Background" Value="{StaticResource FundoPrincipal}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource TextoPrincipal}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <!--  TAB 1: Dados da Clínica  -->
            <TabItem Header="Dados da Clínica">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!--  Nome da Clínica  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Nome da Clínica *" />
                        <TextBox Style="{StaticResource FieldTextBoxStyle}" Text="{Binding NomeClinica, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Morada  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Morada" />
                        <TextBox
                            Height="60"
                            AcceptsReturn="True"
                            Style="{StaticResource FieldTextBoxStyle}"
                            Text="{Binding Morada, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" />

                        <!--  Telefone  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Telefone" />
                        <TextBox Style="{StaticResource FieldTextBoxStyle}" Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Email  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Email" />
                        <TextBox Style="{StaticResource FieldTextBoxStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  NIPC  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="NIPC / NIF" />
                        <TextBox Style="{StaticResource FieldTextBoxStyle}" Text="{Binding Nipc, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Logo  -->
                        <TextBlock
                            Margin="0,10,0,8"
                            Style="{StaticResource LabelStyle}"
                            Text="Logo da Clínica" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Preview do logo  -->
                            <Border
                                Grid.Column="0"
                                Height="120"
                                Margin="0,0,10,0"
                                Background="White"
                                BorderBrush="#E3E9DE"
                                BorderThickness="1"
                                CornerRadius="6">
                                <Grid>
                                    <!--  Texto quando sem logo  -->
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="#5A6558"
                                        Text="Nenhum logo selecionado">
                                        <TextBlock.Visibility>
                                            <Binding Converter="{StaticResource StringToVisibilityConverter}" Path="LogoPath">
                                                <Binding.ConverterParameter>
                                                    <Visibility>Collapsed</Visibility>
                                                </Binding.ConverterParameter>
                                            </Binding>
                                        </TextBlock.Visibility>
                                    </TextBlock>
                                    <!--  Logo quando selecionado  -->
                                    <Image
                                        Margin="10"
                                        Source="{Binding LogoPath}"
                                        Stretch="Uniform"
                                        Visibility="{Binding LogoPath, Converter={StaticResource StringToVisibilityConverter}}" />
                                </Grid>
                            </Border>

                            <!--  Botão selecionar logo  -->
                            <Button
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Command="{Binding SelecionarLogoCommand}"
                                Content="Selecionar Logo"
                                Style="{StaticResource SecondaryButtonStyle}" />
                        </Grid>

                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#5A6558"
                            Text="Formatos suportados: PNG, JPG, JPEG (máx. 2MB)" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!--  TAB 2: Configurações de Email  -->
            <TabItem Header="Configurações de Email">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!--  Servidor SMTP  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Servidor SMTP *" />
                        <TextBox
                            Style="{StaticResource FieldTextBoxStyle}"
                            Text="{Binding SmtpHost, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Ex: smtp.gmail.com, smtp.office365.com" />

                        <!--  Porta SMTP  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Porta SMTP *" />
                        <TextBox
                            Style="{StaticResource FieldTextBoxStyle}"
                            Text="{Binding SmtpPort, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Ex: 587 (TLS), 465 (SSL)" />

                        <!--  Email de envio  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Email de Envio *" />
                        <TextBox
                            Style="{StaticResource FieldTextBoxStyle}"
                            Text="{Binding SmtpFromEmail, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Email usado para enviar mensagens" />

                        <!--  Senha / App Password  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Senha / App Password *" />
                        <PasswordBox
                            x:Name="SmtpPasswordBox"
                            Height="36"
                            Margin="0,0,0,16"
                            Padding="10,8"
                            PasswordChanged="SmtpPasswordBox_PasswordChanged"
                            Style="{StaticResource FieldPasswordBoxStyle}"
                            ToolTip="Para Gmail, use App Password (senha de aplicação)" />

                        <!--  Nome do remetente  -->
                        <TextBlock Style="{StaticResource LabelStyle}" Text="Nome do Remetente *" />
                        <TextBox
                            Style="{StaticResource FieldTextBoxStyle}"
                            Text="{Binding SmtpFromName, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Nome que aparecerá como remetente" />

                        <!--  Informação sobre Gmail App Password  -->
                        <Border
                            Margin="0,10,0,20"
                            Padding="12"
                            Background="#FFF9E6"
                            BorderBrush="#FFE5B3"
                            BorderThickness="1"
                            CornerRadius="6">
                            <StackPanel>
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#8B7500"
                                    Text="ℹ️ Como configurar Gmail:" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontSize="12"
                                    Foreground="#5A6558"
                                    Text="1. Ative a verificação em 2 passos na sua conta Google"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    FontSize="12"
                                    Foreground="#5A6558"
                                    Text="2. Vá a: Conta Google &gt; Segurança &gt; Senhas de aplicações"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,2,0,0"
                                    FontSize="12"
                                    Foreground="#5A6558"
                                    Text="3. Crie uma senha para 'Email' e use-a no campo acima"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>

                        <!--  Botão testar conexão  -->
                        <Button
                            Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding TestarConexaoCommand}"
                            Content="🔌 Testar Conexão SMTP"
                            Style="{StaticResource SecondaryButtonStyle}"
                            ToolTip="Envia um email de teste para verificar as configurações" />

                        <!--  Mensagem de sucesso do teste  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="13"
                            Foreground="#5CB85C"
                            Text="{Binding TesteSucessoMessage}"
                            Visibility="{Binding TesteSucessoMessage, Converter={StaticResource StringToVisibilityConverter}}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!--  TAB 3: Documentos & Templates  -->
            <TabItem Header="📁 Documentos">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!--  Secção Templates PDF  -->
                        <Border
                            Margin="0,0,0,20"
                            Padding="20"
                            Background="White"
                            BorderBrush="{StaticResource BordaBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        FontSize="18"
                                        Text="📄" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource TextoPrincipal}"
                                        Text="Templates PDF para Prescrições" />
                                </StackPanel>

                                <TextBlock
                                    Margin="0,0,0,15"
                                    FontSize="12"
                                    Foreground="{StaticResource TextoSecundario}"
                                    Text="Ficheiros PDF usados como base para prescrições naturopáticas"
                                    TextWrapping="Wrap" />

                                <Button
                                    Padding="15,10"
                                    HorizontalAlignment="Left"
                                    Background="#9CAF97"
                                    BorderBrush="#879B83"
                                    BorderThickness="0"
                                    Command="{Binding AdicionarTemplatePdfCommand}"
                                    Foreground="White"
                                    ToolTip="Copiar ficheiro PDF para a pasta Templates">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,8,0"
                                            FontSize="16"
                                            Text="➕" />
                                        <TextBlock FontSize="14" Text="Adicionar Template PDF" />
                                    </StackPanel>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#879B83" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Border
                                    Margin="0,15,0,0"
                                    Padding="15"
                                    Background="#F7F9F6"
                                    BorderBrush="#E3E9DE"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,8"
                                            FontWeight="SemiBold"
                                            Text="📂 Templates Encontrados:" />
                                        <TextBlock
                                            FontSize="12"
                                            FontStyle="Italic"
                                            Foreground="#999"
                                            Text="(Lista de templates será implementada em versão futura)" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!--  Secção Logos e Assinaturas  -->
                        <Border
                            Padding="20"
                            Background="White"
                            BorderBrush="{StaticResource BordaBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        FontSize="18"
                                        Text="🖼️" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource TextoPrincipal}"
                                        Text="Logos e Assinaturas" />
                                </StackPanel>

                                <TextBlock
                                    Margin="0,0,0,15"
                                    FontSize="12"
                                    Foreground="{StaticResource TextoSecundario}"
                                    Text="Imagens usadas em cabeçalhos de documentos (logo, assinatura digital)"
                                    TextWrapping="Wrap" />

                                <Border
                                    Padding="12"
                                    Background="#FEF3C7"
                                    BorderBrush="#FCD34D"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,8,0"
                                            FontSize="14"
                                            Text="ℹ️" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#92400E"
                                            Text="Configure o logo da clínica na aba 'Dados da Clínica' acima"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!--  Botões de ação  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Mensagem de erro  -->
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="#D9534F"
                Text="{Binding ErrorMessage}"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

            <!--  Botão Cancelar  -->
            <Button
                Grid.Column="1"
                Margin="0,0,10,0"
                Click="Cancelar_Click"
                Content="Cancelar"
                Style="{StaticResource SecondaryButtonStyle}" />

            <!--  Botão Guardar  -->
            <Button
                Grid.Column="2"
                Command="{Binding GuardarCommand}"
                Content="Guardar"
                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                Style="{StaticResource PrimaryButtonStyle}" />
        </Grid>
    </Grid>
</Window>
