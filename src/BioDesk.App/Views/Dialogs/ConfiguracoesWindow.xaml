<Window
    x:Class="BioDesk.App.Views.Dialogs.ConfiguracoesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BioDesk.ViewModels;assembly=BioDesk.ViewModels"
    Title="Configurações da Clínica"
    Width="700"
    Height="650"
    d:DataContext="{d:DesignInstance Type=viewmodels:ConfiguracaoClinicaViewModel}"
    Background="#F7F9F6"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Estilo para labels  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#3F4A3D" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <!--  Estilo para TextBox  -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E3E9DE" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <!--  Estilo para botões  -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#9CAF97" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#879B83" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6B7F67" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#5A6558" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="BorderBrush" Value="#E3E9DE" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F2F5F0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Título  -->
            <RowDefinition Height="*" />
            <!--  Conteúdo  -->
            <RowDefinition Height="Auto" />
            <!--  Botões  -->
        </Grid.RowDefinitions>

        <!--  Título  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="#3F4A3D"
                Text="Configurações da Clínica" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="13"
                Foreground="#5A6558"
                Text="Configure os dados da clínica que aparecerão nos documentos e PDFs" />
        </StackPanel>

        <!--  Formulário  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0,0,0,20"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Nome da Clínica  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Nome da Clínica *" />
                <TextBox Style="{StaticResource InputStyle}" Text="{Binding NomeClinica, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Morada  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Morada" />
                <TextBox
                    Height="60"
                    AcceptsReturn="True"
                    Style="{StaticResource InputStyle}"
                    Text="{Binding Morada, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />

                <!--  Telefone  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Telefone" />
                <TextBox Style="{StaticResource InputStyle}" Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Email  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="Email" />
                <TextBox Style="{StaticResource InputStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <!--  NIPC  -->
                <TextBlock Style="{StaticResource LabelStyle}" Text="NIPC / NIF" />
                <TextBox Style="{StaticResource InputStyle}" Text="{Binding Nipc, UpdateSourceTrigger=PropertyChanged}" />

                <!--  Logo  -->
                <TextBlock
                    Margin="0,10,0,8"
                    Style="{StaticResource LabelStyle}"
                    Text="Logo da Clínica" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Preview do logo  -->
                    <Border
                        Grid.Column="0"
                        Height="120"
                        Margin="0,0,10,0"
                        Background="White"
                        BorderBrush="#E3E9DE"
                        BorderThickness="1"
                        CornerRadius="6">
                        <Grid>
                            <!--  Texto quando sem logo  -->
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="#5A6558"
                                Text="Nenhum logo selecionado">
                                <TextBlock.Visibility>
                                    <Binding
                                        Converter="{StaticResource StringToVisibilityConverter}"
                                        Path="LogoPath">
                                        <Binding.ConverterParameter>
                                            <Visibility>Collapsed</Visibility>
                                        </Binding.ConverterParameter>
                                    </Binding>
                                </TextBlock.Visibility>
                            </TextBlock>
                            <!--  Logo quando selecionado  -->
                            <Image
                                Margin="10"
                                Source="{Binding LogoPath}"
                                Stretch="Uniform"
                                Visibility="{Binding LogoPath, Converter={StaticResource StringToVisibilityConverter}}" />
                        </Grid>
                    </Border>

                    <!--  Botão selecionar logo  -->
                    <Button
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Command="{Binding SelecionarLogoCommand}"
                        Content="Selecionar Logo"
                        Style="{StaticResource SecondaryButtonStyle}" />
                </Grid>

                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="12"
                    Foreground="#5A6558"
                    Text="Formatos suportados: PNG, JPG, JPEG (máx. 2MB)" />
            </StackPanel>
        </ScrollViewer>

        <!--  Botões de ação  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Mensagem de erro  -->
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="#D9534F"
                Text="{Binding ErrorMessage}"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVisibilityConverter}}" />

            <!--  Botão Cancelar  -->
            <Button
                Grid.Column="1"
                Margin="0,0,10,0"
                Click="Cancelar_Click"
                Content="Cancelar"
                Style="{StaticResource SecondaryButtonStyle}" />

            <!--  Botão Guardar  -->
            <Button
                Grid.Column="2"
                Command="{Binding GuardarCommand}"
                Content="Guardar"
                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                Style="{StaticResource PrimaryButtonStyle}" />
        </Grid>
    </Grid>
</Window>
