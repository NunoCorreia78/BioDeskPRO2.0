<UserControl x:Class="BioDesk.App.Views.FichaPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BioDesk.ViewModels;assembly=BioDesk.ViewModels"
             xmlns:converters="clr-namespace:BioDesk.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:FichaPacienteViewModel, IsDesignTimeCreatable=False}"
             Loaded="FichaPacienteView_Loaded">
    
    <UserControl.Resources>
        <!-- Conversores -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <!-- Gradiente de fundo -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FCFDFB" Offset="0"/>
            <GradientStop Color="#F2F5F0" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Estilo base para botões -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#9CAF97"/>
            <Setter Property="Foreground" Value="#3F4A3D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#879B83"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Estilo para Labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#3F4A3D"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <!-- Estilo para TextBoxes -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E3E9DE"/>
            <Setter Property="Background" Value="#FCFDFB"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#3F4A3D"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#9CAF97"/>
                    <Setter Property="Background" Value="#FFFFFF"/>
                </Trigger>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="#F2F5F0"/>
                    <Setter Property="Foreground" Value="#5A6558"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Estilo para DatePicker -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E3E9DE"/>
            <Setter Property="Background" Value="#FCFDFB"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#3F4A3D"/>
        </Style>
        
        <!-- Estilo para botões secundários -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CAF97"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F2F5F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F7F9F6" BorderBrush="#E3E9DE" BorderThickness="0,0,0,1" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Ficha de Paciente" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#3F4A3D"/>
                    <TextBlock Text="{Binding PacienteAtual.NomeCompleto, FallbackValue='Nenhum paciente selecionado'}" 
                              FontSize="16" 
                              Foreground="#5A6558" 
                              Margin="0,5,0,0"/>
                    <TextBlock Foreground="#5A6558" 
                              FontSize="12" 
                              Margin="0,2,0,0">
                        <Run Text="Idade:"/>
                        <Run Text="{Binding PacienteAtual.Idade, FallbackValue='--'}" FontWeight="SemiBold"/>
                        <Run Text="anos | Criado em"/>
                        <Run Text="{Binding PacienteAtual.CriadoEm, StringFormat='dd/MM/yyyy'}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Indicador de alterações -->
                    <Border Background="#FFB84D" 
                           CornerRadius="3" 
                           Padding="8,4" 
                           Margin="0,0,15,0"
                           Visibility="{Binding IsDirty, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="• Alterações não guardadas" 
                                  FontSize="11" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"/>
                    </Border>
                    
                    <!-- Modo de visualização -->
                    <Border Background="#4CAF50" 
                           CornerRadius="3" 
                           Padding="8,4" 
                           Margin="0,0,15,0"
                           Visibility="{Binding IsEdicao, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <TextBlock Text="👁 Visualização" 
                                  FontSize="11" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"/>
                    </Border>
                    
                    <!-- Modo de edição -->
                    <Border Background="#FF9800" 
                           CornerRadius="3" 
                           Padding="8,4" 
                           Margin="0,0,15,0"
                           Visibility="{Binding IsEdicao, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="✏ Edição" 
                                  FontSize="11" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo principal -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled" 
                     Padding="30">
            <Border Background="#F7F9F6" 
                   BorderBrush="#E3E9DE" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Padding="30"
                   MaxWidth="600">
                <StackPanel>
                    <!-- Dados Básicos -->
                    <TextBlock Text="DADOS BÁSICOS" 
                              Style="{StaticResource LabelStyle}" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Nome Completo *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource TextBoxStyle}"
                            IsReadOnly="{Binding IsEdicao, Converter={StaticResource InverseBooleanConverter}}"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Email *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource TextBoxStyle}"
                            IsReadOnly="{Binding IsEdicao, Converter={StaticResource InverseBooleanConverter}}"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Telefone" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource TextBoxStyle}"
                            IsReadOnly="{Binding IsEdicao, Converter={StaticResource InverseBooleanConverter}}"
                            Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Data de Nascimento *" Style="{StaticResource LabelStyle}"/>
                    <DatePicker SelectedDate="{Binding DataNascimento}" 
                               Style="{StaticResource DatePickerStyle}"
                               IsEnabled="{Binding IsEdicao}"
                               Margin="0,0,0,20"/>
                    
                    <!-- Nota para futuras expansões -->
                    <Border Background="#E8F5E8" 
                           BorderBrush="#C8E6C9" 
                           BorderThickness="1" 
                           CornerRadius="4" 
                           Padding="15" 
                           Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="📝 Versão Básica" 
                                      FontWeight="SemiBold" 
                                      Foreground="#2E7D32"/>
                            <TextBlock Text="Esta é a versão inicial da ficha do paciente com campos básicos. Campos adicionais (morada, informações clínicas, etc.) serão implementados em versões futuras." 
                                      FontSize="11" 
                                      Foreground="#388E3C" 
                                      TextWrapping="Wrap" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Rodapé com botões -->
        <Border Grid.Row="2" 
               Background="#F7F9F6" 
               BorderBrush="#E3E9DE" 
               BorderThickness="0,1,0,0" 
               Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Botões de navegação -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="🏠 Dashboard" 
                           Command="{Binding VoltarDashboardCommand}"
                           Style="{StaticResource SecondaryButtonStyle}" 
                           Margin="0,0,10,0"/>
                    <Button Content="📋 Lista Pacientes" 
                           Command="{Binding VoltarListaCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
                
                <!-- Botões de ação -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Modo visualização -->
                    <Button Content="✏ Editar" 
                           Command="{Binding IniciarEdicaoCommand}"
                           Style="{StaticResource ButtonStyle}" 
                           Margin="0,0,10,0"
                           Visibility="{Binding IsEdicao, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    
                    <!-- Modo edição -->
                    <Button Content="❌ Cancelar" 
                           Command="{Binding CancelarEdicaoCommand}"
                           Style="{StaticResource SecondaryButtonStyle}" 
                           Margin="0,0,10,0"
                           Visibility="{Binding IsEdicao, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="💾 Gravar" 
                           Command="{Binding GravarAlteracoesCommand}"
                           Style="{StaticResource ButtonStyle}" 
                           Visibility="{Binding IsEdicao, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>