<UserControl x:Class="BioDesk.App.Views.FichaPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:BioDesk.App.Converters"
             xmlns:abas="clr-namespace:BioDesk.App.Views.Abas"
             d:DesignHeight="800" d:DesignWidth="1200"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Cores do tema -->
        <SolidColorBrush x:Key="TextoPrincipal">#3F4A3D</SolidColorBrush>
        <SolidColorBrush x:Key="TextoSecundario">#5A6558</SolidColorBrush>

        <!-- Converter para progresso das abas -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:TabStyleConverter x:Key="TabStyleConverter"/>

        <!-- DataTemplate para Aba 1: Dados Biográficos -->
        <DataTemplate x:Key="DadosBiograficosTemplate">
            <abas:DadosBiograficosUserControl/>
        </DataTemplate>

        <!-- DataTemplate para conteúdo de texto simples (outras abas) -->
        <DataTemplate x:Key="ConteudoTextoTemplate">
            <TextBlock Text="{Binding}" FontSize="16" Margin="20"
                       Foreground="{StaticResource TextoPrincipal}"
                       TextWrapping="Wrap"/>
        </DataTemplate>

        <!-- Style para separadores INATIVOS - CARTÕES FLUTUANTES MODERNOS -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#F8FAF7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{StaticResource TextoSecundario}"/>
            <Setter Property="BorderBrush" Value="#D6E2D3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="24,16,24,16"/>
            <Setter Property="Margin" Value="8,8,8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#C0C8C0" ShadowDepth="2" BlurRadius="8" Opacity="0.25"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="#F0F6EE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextoPrincipal}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BotaoPrincipal}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style para separador ATIVO - CARTÃO PREMIUM DESTAQUE -->
        <Style x:Key="TabButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#9CAF97" Offset="0"/>
                        <GradientStop Color="#87A082" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#7A9074"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8,4,8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#9CAF97" ShadowDepth="3" BlurRadius="12" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style para botões de navegação no rodapé - DESIGN MODERNO -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BotaoPrincipal}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#B8C5B3" ShadowDepth="3" BlurRadius="12" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BotaoHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#7A8D76"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#D5DDD2"/>
                                <Setter Property="Foreground" Value="#8A9487"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style para botão secundário (Guardar Rascunho) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
            <Setter Property="Background" Value="#E8F2E5"/>
            <Setter Property="Foreground" Value="{StaticResource BotaoPrincipal}"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource FundoPrincipal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Cabeçalho -->
            <RowDefinition Height="Auto"/> <!-- Barra de Progresso -->
            <RowDefinition Height="Auto"/> <!-- Separadores/Abas -->
            <RowDefinition Height="*"/>    <!-- Conteúdo da Aba -->
            <RowDefinition Height="Auto"/> <!-- Rodapé de Navegação -->
        </Grid.RowDefinitions>

        <!-- === CABEÇALHO DO PACIENTE === -->
        <Border Grid.Row="0" Background="{StaticResource CartaoBrush}"
                BorderBrush="{StaticResource BordaBrush}" BorderThickness="0,0,0,2"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Informações do Paciente -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📋" FontSize="24" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding NomePaciente, FallbackValue='Nome do Paciente'}"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextoPrincipal}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Processo: " FontSize="12"
                                       Foreground="{StaticResource TextoSecundario}"/>
                            <TextBlock Text="{Binding NumeroProcesso, FallbackValue='PAC-2025-001'}"
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextoPrincipal}"/>
                            <TextBlock Text=" • " Margin="8,0" FontSize="12"
                                       Foreground="{StaticResource TextoSecundario}"/>
                            <TextBlock Text="{Binding IdadePaciente, FallbackValue='45 anos'}"
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextoPrincipal}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Estado e Data -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <Border Background="{Binding EstadoCorHex, FallbackValue=#9CAF97}"
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding EstadoRegisto, FallbackValue='Em Progresso'}"
                                   Foreground="White" FontSize="12" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{Binding DataCriacao, FallbackValue='28/09/2025', StringFormat='Criado: {0:dd/MM/yyyy}'}"
                               FontSize="11" HorizontalAlignment="Right" Margin="0,4,0,0"
                               Foreground="{StaticResource TextoSecundario}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === BARRA DE PROGRESSO === -->
        <Border Grid.Row="1" Background="{StaticResource FundoSecundario}"
                BorderBrush="{StaticResource BordaBrush}" BorderThickness="0,0,0,1"
                Padding="20,12">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Progresso da Ficha" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextoPrincipal}"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding PercentagemProgresso, FallbackValue='4/6 etapas completas (67%)'}"
                               FontSize="12" Foreground="{StaticResource TextoSecundario}"/>
                </Grid>

                <ProgressBar Height="8" Background="#E0E0E0"
                             Foreground="{StaticResource BotaoPrincipal}"
                             Value="{Binding ProgressoNumerico, FallbackValue=67}"
                             Maximum="100"/>
            </StackPanel>
        </Border>

        <!-- === SEPARADORES/ABAS - DESIGN CARTÕES FLUTUANTES PREMIUM === -->
        <Border Grid.Row="2" Padding="24,16,24,8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F5F8F4" Offset="0"/>
                    <GradientStop Color="#EDF2EB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                         Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAba1" Content="👤 Dados Biográficos"
                        Style="{StaticResource TabButtonActiveStyle}"
                        Command="{Binding NavegarParaAbaCommand}"
                        CommandParameter="1"/>

                <Button x:Name="BtnAba2" Content="📋 Declaração de Saúde"
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding NavegarParaAbaCommand}"
                        CommandParameter="2"/>

                <Button x:Name="BtnAba3" Content="📜 Consentimentos"
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding NavegarParaAbaCommand}"
                        CommandParameter="3"/>

                <Button x:Name="BtnAba4" Content="🩺 Consultas"
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding NavegarParaAbaCommand}"
                        CommandParameter="4"/>

                <Button x:Name="BtnAba5" Content="👁️ Íris"
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding NavegarParaAbaCommand}"
                        CommandParameter="5"/>

                <Button x:Name="BtnAba6" Content="🌿 Terapias"
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding NavegarParaAbaCommand}"
                        CommandParameter="6"
                        IsEnabled="False"
                        ToolTip="Módulo em desenvolvimento futuro"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- === CONTEÚDO DA ABA ATIVA === -->
        <Border Grid.Row="3" Background="{StaticResource FundoPrincipal}"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly"
                          CanContentScroll="False">

                <!-- Conteúdo dinâmico baseado na aba ativa -->
                <Grid>
                    <!-- UserControl para Aba 1: Dados Biográficos -->
                    <abas:DadosBiograficosUserControl
                        Visibility="{Binding AbaAtiva, Converter={StaticResource StringParameterToVisibilityConverter}, ConverterParameter=1}"/>

                    <!-- Texto para outras abas (Abas 2-6) -->
                    <TextBlock Text="{Binding ConteudoAbaAtiva}" FontSize="16" Margin="20"
                              Foreground="{StaticResource TextoPrincipal}"
                              TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AbaAtiva}" Value="2">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AbaAtiva}" Value="3">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AbaAtiva}" Value="4">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AbaAtiva}" Value="5">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AbaAtiva}" Value="6">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

            </ScrollViewer>
        </Border>

        <!-- === RODAPÉ DE NAVEGAÇÃO === -->
        <Border Grid.Row="4" Background="{StaticResource CartaoBrush}"
                BorderBrush="{StaticResource BordaBrush}" BorderThickness="0,2,0,0"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botões Esquerda -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="⬅️ Anterior"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding AbaAnteriorCommand}"/>
                </StackPanel>

                <!-- Botões Centro - SISTEMA AUTO-SAVE RESTAURADO -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="💾 Guardar Rascunho"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding GuardarRascunhoCommand}"/>
                    <TextBlock Text="{Binding StatusAutoSave, FallbackValue='Pronto'}"
                               FontSize="11" Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextoSecundario}"/>
                </StackPanel>

                <!-- Botões Direita -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Seguinte ➡️"
                            Style="{StaticResource NavigationButtonStyle}"
                            Command="{Binding ProximaAbaCommand}"
                            IsEnabled="{Binding PodeAvancarAba}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
