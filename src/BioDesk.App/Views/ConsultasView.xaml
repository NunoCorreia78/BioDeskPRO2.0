<UserControl x:Class="BioDesk.App.Views.ConsultasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:BioDesk.ViewModels;assembly=BioDesk.ViewModels"
             xmlns:local="clr-namespace:BioDesk.App.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ConsultasViewModel}"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:StringParameterToVisibilityConverter x:Key="StringParameterToVisibilityConverter"/>
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        
        <!-- 🩺 ESTILOS CONSULTAS MÉDICAS -->
        <Style x:Key="ConsultaCard" TargetType="Border">
            <Setter Property="Background" Value="#F7F9F6"/>
            <Setter Property="BorderBrush" Value="#E3E9DE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#9CAF97"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="4" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#879B83"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FCFDFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 📋 HEADER COM TÍTULO E AÇÕES -->
        <Border Grid.Row="0" Background="#F2F5F0" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🩺" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Gestão de Consultas" 
                              FontSize="24" FontWeight="Bold" 
                              Foreground="#3F4A3D" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1" Content="← Dashboard" 
                       Command="{Binding NavegarParaDashboardCommand}"
                       Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
                       
                <Button Grid.Column="2" Content="+ Nova Consulta" 
                       Command="{Binding AbrirNovaConsultaAsyncCommand}"
                       Style="{StaticResource ActionButton}" 
                       Background="#7A9471"/>
            </Grid>
        </Border>

        <!-- 🔍 FILTROS E CONSULTAS PRÓXIMAS -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Filtros -->
            <Border Grid.Column="0" Style="{StaticResource ConsultaCard}">
                <StackPanel>
                    <TextBlock Text="🔍 Filtros" FontWeight="SemiBold" FontSize="16" 
                              Foreground="#3F4A3D" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Período:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding FiltroData}">
                                <ComboBoxItem Content="Todas"/>
                                <ComboBoxItem Content="Hoje"/>
                                <ComboBoxItem Content="Esta Semana"/>
                                <ComboBoxItem Content="Este Mês"/>
                                <ComboBoxItem Content="Personalizado"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding FiltroStatus}">
                                <ComboBoxItem Content="Todas"/>
                                <ComboBoxItem Content="Agendada"/>
                                <ComboBoxItem Content="Realizada"/>
                                <ComboBoxItem Content="Cancelada"/>
                                <ComboBoxItem Content="Faltou"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Visibility="{Binding FiltroData, Converter={StaticResource StringParameterToVisibilityConverter}, ConverterParameter=Personalizado}">
                            <TextBlock Text="Data Início:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <!-- DatePicker removido conforme solicitado -->
                            <TextBox Text="Filtro por data desabilitado" Width="140" IsReadOnly="True"/>
                        </StackPanel>

                        <Button Grid.Column="6" Content="Aplicar" 
                               Command="{Binding AplicarFiltrosAsyncCommand}"
                               Style="{StaticResource ActionButton}" 
                               VerticalAlignment="Bottom"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Consultas Próximas -->
            <Border Grid.Column="2" Style="{StaticResource ConsultaCard}">
                <StackPanel>
                    <TextBlock Text="⏰ Próximas Consultas" FontWeight="SemiBold" FontSize="16" 
                              Foreground="#3F4A3D" Margin="0,0,0,15"/>
                    
                    <ItemsControl ItemsSource="{Binding ConsultasProximas}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFFFFF" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DataConsulta, StringFormat='{}{0:dd/MM HH:mm}'}" 
                                                  FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding Paciente.Nome}" FontSize="11" Foreground="#5A6558"/>
                                        <TextBlock Text="{Binding TipoConsulta}" FontSize="10" Foreground="#7A9471"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 📋 LISTA DE CONSULTAS -->
        <ScrollViewer Grid.Row="2" Margin="20,0">
            <ItemsControl ItemsSource="{Binding Consultas}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ConsultaCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Data e Hora -->
                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                    <TextBlock Text="{Binding DataConsulta, StringFormat='{}{0:ddd}'}" 
                                              FontSize="12" Foreground="#7A9471" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding DataConsulta, StringFormat='{}{0:dd/MM}'}" 
                                              FontSize="16" FontWeight="Bold" Foreground="#3F4A3D" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding DataConsulta, StringFormat='{}{0:HH:mm}'}" 
                                              FontSize="14" Foreground="#5A6558" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Informações da Consulta -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Paciente.Nome}" FontSize="16" FontWeight="SemiBold" 
                                              Foreground="#3F4A3D" Margin="0,0,0,5"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Tipo:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding TipoConsulta}"/>
                                        <TextBlock Text=" | Telefone:" FontWeight="SemiBold" Margin="10,0,5,0"/>
                                        <TextBlock Text="{Binding Paciente.Telefone}"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Notas}" TextWrapping="Wrap" 
                                              Foreground="#5A6558" MaxHeight="40" TextTrimming="WordEllipsis"/>
                                </StackPanel>

                                <!-- Status Badge -->
                                <Border Grid.Column="2" Margin="10,0">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource StatusBadge}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Agendada">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Realizada">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelada">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Agendada">
                                                        <Setter Property="Foreground" Value="#1976D2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Realizada">
                                                        <Setter Property="Foreground" Value="#388E3C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelada">
                                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <!-- Ações -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <Button Content="Ver Paciente" 
                                           Command="{Binding DataContext.VerPacienteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           Style="{StaticResource ActionButton}" FontSize="11"/>
                                    
                                    <Button Content="Realizada" 
                                           Command="{Binding DataContext.MarcarComoRealizadaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           Style="{StaticResource ActionButton}" FontSize="11"
                                           Background="#7A9471"
                                           Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}, ConverterParameter=Agendada}"/>
                                    
                                    <Button Content="Cancelar" 
                                           Command="{Binding DataContext.CancelarConsultaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           Style="{StaticResource ActionButton}" FontSize="11"
                                           Background="#D32F2F"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 📋 DIÁLOGO NOVA CONSULTA -->
        <Border Grid.RowSpan="3" Background="#80000000" 
               Visibility="{Binding MostrarDialogoNovaConsulta, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" CornerRadius="10" Padding="30" 
                   MaxWidth="500" MaxHeight="600" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="📅 Nova Consulta" FontSize="20" FontWeight="Bold" 
                                  Foreground="#3F4A3D" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Paciente -->
                            <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                                <TextBlock Text="Paciente:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding NovaConsulta.PacienteId}" 
                                         ItemsSource="{Binding PacientesDisponiveis}"
                                         DisplayMemberPath="Nome" 
                                         SelectedValuePath="Id"/>
                            </StackPanel>

                            <!-- Data -->
                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="Data:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <!-- DatePicker removido conforme solicitado -->
                                <TextBox Text="Data será preenchida automaticamente" IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Hora -->
                            <StackPanel Grid.Row="2" Grid.Column="2">
                                <TextBlock Text="Hora:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NovaConsulta.DataConsulta, StringFormat='{}{0:HH:mm}'}"/>
                            </StackPanel>

                            <!-- Tipo -->
                            <StackPanel Grid.Row="4" Grid.Column="0">
                                <TextBlock Text="Tipo:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox SelectedItem="{Binding NovaConsulta.TipoConsulta}"
                                         ItemsSource="{Binding TiposConsulta}"/>
                            </StackPanel>

                            <!-- Valor -->
                            <StackPanel Grid.Row="4" Grid.Column="2">
                                <TextBlock Text="Valor (€):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NovaConsulta.Valor}"/>
                            </StackPanel>

                            <!-- Notas -->
                            <StackPanel Grid.Row="6" Grid.ColumnSpan="3">
                                <TextBlock Text="Notas:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NovaConsulta.Notas}" 
                                        TextWrapping="Wrap" Height="80" 
                                        AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- Erro -->
                            <Border Grid.Row="8" Grid.ColumnSpan="3" Background="#FFEBEE" 
                                   CornerRadius="4" Padding="10" 
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F" TextWrapping="Wrap"/>
                            </Border>

                            <!-- Botões -->
                            <StackPanel Grid.Row="10" Grid.ColumnSpan="3" 
                                       Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Cancelar" 
                                       Command="{Binding CancelarNovaConsultaCommand}"
                                       Style="{StaticResource ActionButton}" 
                                       Background="#9E9E9E" Margin="0,0,10,0"/>
                                <Button Content="Gravar Consulta" 
                                       Command="{Binding GravarConsultaAsyncCommand}"
                                       Style="{StaticResource ActionButton}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>
    </Grid>
</UserControl>