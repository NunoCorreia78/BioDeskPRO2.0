<UserControl x:Class="BioDesk.App.Views.AnamneseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BioDesk.ViewModels;assembly=BioDesk.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:AnamneseViewModelIntegrado}">

    <UserControl.Resources>
        <!-- Estilos para o sistema de flags -->
        <Style x:Key="FlagToggleStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="PriorityComboStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- DataTemplate para Modo EdiÃ§Ã£o -->
        <DataTemplate x:Key="ModoEdicaoTemplate">
            <Border Background="White" BorderBrush="#E3E9DE" BorderThickness="1" 
                   CornerRadius="8" Margin="0,5">
                <StackPanel>
                    <!-- CabeÃ§alho do Expander com Flags -->
                    <Border Background="#F7F9F6" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- TÃ­tulo + Toggle Expander -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <ToggleButton x:Name="ExpanderToggle" 
                                            Content="â–¶" 
                                            Width="20" Height="20" 
                                            FontSize="10"
                                            IsChecked="{Binding IsExpanded, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding Titulo}" 
                                          FontWeight="Bold" 
                                          FontSize="14" 
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Flags do Expander -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox Content="ðŸ“„ PDF" 
                                         IsChecked="{Binding Flags.IncluirNoPdf}" 
                                         Style="{StaticResource FlagToggleStyle}"/>
                                <CheckBox Content="ðŸ“‹ Timeline" 
                                         IsChecked="{Binding Flags.EnviarParaTimeline}" 
                                         Style="{StaticResource FlagToggleStyle}"/>
                                <ComboBox Style="{StaticResource PriorityComboStyle}"
                                         SelectedIndex="{Binding Flags.PrioridadePadrao}">
                                    <ComboBoxItem>Baixa</ComboBoxItem>
                                    <ComboBoxItem>MÃ©dia</ComboBoxItem>
                                    <ComboBoxItem>Alta</ComboBoxItem>
                                </ComboBox>
                                <CheckBox Content="â¤ï¸" 
                                         IsChecked="{Binding Flags.PretendidoPeloPaciente}" 
                                         Style="{StaticResource FlagToggleStyle}"
                                         ToolTip="Pretendido pelo paciente"/>
                                <CheckBox Content="ðŸ“Œ" 
                                         IsChecked="{Binding Flags.AtualizarPermanente}" 
                                         Style="{StaticResource FlagToggleStyle}"
                                         ToolTip="Atualizar permanente"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ConteÃºdo do Expander (visÃ­vel quando expandido) -->
                    <Border x:Name="ContentBorder" 
                           Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FCFDFB" 
                                               BorderBrush="#E8E8E8" 
                                               BorderThickness="0,0,0,1" 
                                               Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- ConteÃºdo do Item -->
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Nome}" 
                                                              FontWeight="Medium" 
                                                              FontSize="13" 
                                                              Margin="0,0,0,5"/>
                                                    
                                                    <!-- Campos especÃ­ficos para sintomas -->
                                                    <StackPanel Orientation="Horizontal" 
                                                               Visibility="{Binding TipoItem, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=sintoma}">
                                                        <TextBlock Text="Intensidade:" Margin="0,0,5,0"/>
                                                        <Slider Width="100" 
                                                               Minimum="0" Maximum="10" 
                                                               Value="{Binding Intensidade}" 
                                                               TickFrequency="1" 
                                                               IsSnapToTickEnabled="True"/>
                                                        <TextBlock Text="{Binding Intensidade}" 
                                                                  FontWeight="Bold" 
                                                                  Margin="10,0,0,0"/>
                                                        <TextBlock Text="/10" Margin="0,0,20,0"/>
                                                        
                                                        <ComboBox Width="100" 
                                                                 SelectedValue="{Binding Estado}"
                                                                 Margin="10,0,0,0">
                                                            <ComboBoxItem Content="Inativo"/>
                                                            <ComboBoxItem Content="Ativo"/>
                                                            <ComboBoxItem Content="CrÃ³nico"/>
                                                            <ComboBoxItem Content="Resolvido"/>
                                                        </ComboBox>
                                                    </StackPanel>

                                                    <!-- Campo de texto livre -->
                                                    <TextBox Text="{Binding Conteudo}" 
                                                            Margin="0,5,0,0"
                                                            MinHeight="20"
                                                            TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <!-- Flags do Item -->
                                                <StackPanel Grid.Column="1" 
                                                           Orientation="Horizontal" 
                                                           VerticalAlignment="Top">
                                                    <CheckBox Content="ðŸ“„" 
                                                             IsChecked="{Binding Flags.IncluirNoPdf}" 
                                                             Style="{StaticResource FlagToggleStyle}"
                                                             ToolTip="Incluir no PDF"/>
                                                    <CheckBox Content="ðŸ“‹" 
                                                             IsChecked="{Binding Flags.EnviarParaTimeline}" 
                                                             Style="{StaticResource FlagToggleStyle}"
                                                             ToolTip="Enviar para Timeline"/>
                                                    <CheckBox Content="â¤ï¸" 
                                                             IsChecked="{Binding Flags.PretendidoPeloPaciente}" 
                                                             Style="{StaticResource FlagToggleStyle}"
                                                             ToolTip="Pretendido pelo paciente"/>
                                                    <CheckBox Content="ðŸ“Œ" 
                                                             IsChecked="{Binding Flags.AtualizarPermanente}" 
                                                             Style="{StaticResource FlagToggleStyle}"
                                                             ToolTip="Atualizar permanente"/>
                                                    <ToggleButton Content="Hoje" 
                                                           IsChecked="{Binding Flags.TrabalharHoje}" 
                                                           Style="{StaticResource ActionButtonStyle}"
                                                           Background="#9CAF97" 
                                                           Foreground="White"
                                                           ToolTip="Trabalhar hoje"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- DataTemplate para Modo Documento (PDF Preview) -->
        <DataTemplate x:Key="ModoDocumentoTemplate">
            <Border Background="White" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="{Binding Titulo}" 
                              FontWeight="Bold" 
                              FontSize="16" 
                              Margin="0,0,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="20,0,0,5">
                                    <TextBlock FontSize="12">
                                        <Run Text="â€¢ "/>
                                        <Run Text="{Binding Nome}" FontWeight="Medium"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding Conteudo}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- DataTemplateSelector baseado no ModoDocumento -->
        <Style x:Key="ExpanderStyle" TargetType="ContentPresenter">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.ModoDocumento, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                    <Setter Property="ContentTemplate" Value="{StaticResource ModoEdicaoTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DataContext.ModoDocumento, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                    <Setter Property="ContentTemplate" Value="{StaticResource ModoDocumentoTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FCFDFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Barra Superior -->
            <RowDefinition Height="Auto"/> <!-- Status -->
            <RowDefinition Height="*"/>    <!-- ConteÃºdo Principal -->
        </Grid.RowDefinitions>

        <!-- Barra Superior com BotÃµes de AÃ§Ã£o -->
        <Border Grid.Row="0" 
               Background="#F2F5F0" 
               BorderBrush="#E3E9DE" 
               BorderThickness="0,0,0,1" 
               Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Command="{Binding AlternarModoCommand}" 
                       Style="{StaticResource ActionButtonStyle}"
                       Background="#879B83">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ModoDocumento, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='ðŸ“ Modo EdiÃ§Ã£o|ðŸ“„ PrÃ©-visualizar'}" 
                                  Foreground="White"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding AbrirReconciliacaoCommand}" 
                       Content="ðŸ”„ ReconciliaÃ§Ã£o &amp; Guardar" 
                       Style="{StaticResource ActionButtonStyle}"
                       Background="#9CAF97" 
                       Foreground="White"
                       Margin="10,0,0,0"/>

                <Button Command="{Binding GerarPdfCommand}" 
                       Content="ðŸ“„ Gerar PDF" 
                       Style="{StaticResource ActionButtonStyle}"
                       Background="#5A6558" 
                       Foreground="White"
                       Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Painel de Status -->
        <Border Grid.Row="1" 
               Background="#E8F5E8" 
               BorderBrush="#9CAF97" 
               BorderThickness="1" 
               CornerRadius="4" 
               Margin="20,10,20,0" 
               Padding="15,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding StatusMessage}" 
                          FontWeight="Medium" 
                          Foreground="#2E7D2E"/>
            </StackPanel>
        </Border>

        <!-- ConteÃºdo Principal - Lista de Expanders -->
        <ScrollViewer Grid.Row="2" 
                     Margin="20" 
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Expanders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}" 
                                        Style="{StaticResource ExpanderStyle}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" 
               Background="#80FFFFFF" 
               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,0,0,10"/>
                <TextBlock Text="Processando..." HorizontalAlignment="Center" FontWeight="Medium"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>