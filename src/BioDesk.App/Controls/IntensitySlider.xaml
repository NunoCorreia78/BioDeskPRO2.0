<UserControl x:Class="BioDesk.App.Controls.IntensitySlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <UserControl.Resources>
        <!-- Estilo para o slider de intensidade -->
        <Style x:Key="IntensitySliderStyle" TargetType="Slider">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#E3E9DE"/>
            <Setter Property="Foreground" Value="#9CAF97"/>
            <Setter Property="BorderBrush" Value="#9CAF97"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track -->
                            <Border x:Name="TrackBackground"
                                    Grid.Row="1"
                                    Height="6"
                                    Background="#E3E9DE"
                                    BorderBrush="#D0D0D0"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    VerticalAlignment="center"/>
                            
                            <!-- Progress Bar -->
                            <Rectangle x:Name="PART_SelectionRange"
                                       Grid.Row="1"
                                       Height="6"
                                       Fill="#9CAF97"
                                       VerticalAlignment="center"
                                       Margin="1"
                                       RadiusX="2"
                                       RadiusY="2"/>
                            
                            <!-- Track -->
                            <Track Grid.Row="1" x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderButtonStyle}" 
                                                  Command="Slider.DecreaseLarge"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderButtonStyle}" 
                                                  Command="Slider.IncreaseLarge"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botões do slider -->
        <Style x:Key="SliderButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para o thumb do slider -->
        <Style x:Key="SliderThumbStyle" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse x:Name="Ellipse" 
                                 Fill="#9CAF97" 
                                 Stroke="#879B83"
                                 StrokeThickness="1"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Ellipse" Property="Fill" Value="#879B83"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="Ellipse" Property="Fill" Value="#7A9277"/>
                                <Setter TargetName="Ellipse" Property="StrokeThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para labels de intensidade -->
        <Style x:Key="IntensityLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#5A6558"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Title}"
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Foreground="#3F4A3D"/>
            
            <!-- Valor atual em destaque -->
            <Border Background="#9CAF97" 
                    CornerRadius="12" 
                    Padding="8,2" 
                    Margin="12,0,0,0">
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Value}"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="13"/>
            </Border>
        </StackPanel>

        <!-- Slider principal -->
        <Slider Grid.Row="1"
                x:Name="MainSlider"
                Style="{StaticResource IntensitySliderStyle}"
                Minimum="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Minimum}"
                Maximum="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Maximum}"
                Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Value, Mode=TwoWay}"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                Margin="0,4,0,8"/>

        <!-- Labels de escala -->
        <Grid Grid.Row="2" Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Style="{StaticResource IntensityLabelStyle}" Text="0"/>
            <TextBlock Grid.Column="1" Style="{StaticResource IntensityLabelStyle}" Text="1"/>
            <TextBlock Grid.Column="2" Style="{StaticResource IntensityLabelStyle}" Text="2"/>
            <TextBlock Grid.Column="3" Style="{StaticResource IntensityLabelStyle}" Text="3"/>
            <TextBlock Grid.Column="4" Style="{StaticResource IntensityLabelStyle}" Text="4"/>
            <TextBlock Grid.Column="5" Style="{StaticResource IntensityLabelStyle}" Text="5"/>
            <TextBlock Grid.Column="6" Style="{StaticResource IntensityLabelStyle}" Text="6"/>
            <TextBlock Grid.Column="7" Style="{StaticResource IntensityLabelStyle}" Text="7"/>
            <TextBlock Grid.Column="8" Style="{StaticResource IntensityLabelStyle}" Text="8"/>
            <TextBlock Grid.Column="9" Style="{StaticResource IntensityLabelStyle}" Text="9"/>
            <TextBlock Grid.Column="10" Style="{StaticResource IntensityLabelStyle}" Text="10"/>
        </Grid>

        <!-- Descrições dos níveis -->
        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Style="{StaticResource IntensityLabelStyle}" 
                       Text="Sem dor" FontSize="10" Opacity="0.7"/>
            <TextBlock Grid.Column="1" Style="{StaticResource IntensityLabelStyle}" 
                       Text="Moderada" FontSize="10" Opacity="0.7"/>
            <TextBlock Grid.Column="2" Style="{StaticResource IntensityLabelStyle}" 
                       Text="Intensa" FontSize="10" Opacity="0.7"/>
        </Grid>
    </Grid>
</UserControl>