<Window x:Class="BioDesk.App.Windows.TerapiaLocalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BioDesk.ViewModels.Windows;assembly=BioDesk.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:TerapiaLocalViewModel}"
        Title="Terapia Local (Emissão Direta)"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource FundoPrincipal}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Terapia Local - Emissão Direta"
                   FontSize="24" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextoPrincipal}"
                   Margin="0,0,0,20"/>

        <!-- Controlo Voltagem (GRANDE E VISÍVEL) -->
        <Border Grid.Row="1"
                Background="{DynamicResource Cartao}"
                BorderBrush="{DynamicResource Borda}"
                BorderThickness="2"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Controlo de Voltagem"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextoPrincipal}"
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Slider GRANDE -->
                    <Slider Grid.Column="0"
                            Minimum="0" Maximum="12"
                            Value="{Binding VoltagemV}"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            Height="40"
                            Margin="0,0,20,0"/>

                    <!-- Valor numérico GRANDE -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding VoltagemV, StringFormat='{}{0:F1} V'}"
                               FontSize="32" FontWeight="Bold"
                               Foreground="#9CAF97"
                               VerticalAlignment="Center"
                               Width="100"
                               TextAlignment="Right"/>
                </Grid>

                <TextBlock Text="{Binding CorrenteMaxMa, StringFormat='Corrente Máxima: {0:F0} mA'}"
                           FontSize="12"
                           Foreground="{DynamicResource TextoSecundario}"
                           Margin="0,10,0,10"/>

                <!-- NOVO: Duração Uniforme -->
                <Separator Margin="0,5"/>
                <TextBlock Text="Duração por Frequência (uniforme):"
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextoPrincipal}"
                           Margin="0,10,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="5 segundos"
                                 IsChecked="{Binding DuracaoUniformeSegundos, Converter={StaticResource IntToBoolConverter}, ConverterParameter=5}"
                                 GroupName="Duracao"
                                 Margin="0,0,20,0"/>
                    <RadioButton Content="10 segundos"
                                 IsChecked="{Binding DuracaoUniformeSegundos, Converter={StaticResource IntToBoolConverter}, ConverterParameter=10}"
                                 GroupName="Duracao"
                                 Margin="0,0,20,0"/>
                    <RadioButton Content="15 segundos"
                                 IsChecked="{Binding DuracaoUniformeSegundos, Converter={StaticResource IntToBoolConverter}, ConverterParameter=15}"
                                 GroupName="Duracao"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tabela de Frequências -->
        <GroupBox Grid.Row="2" Header="Frequências a Emitir" Margin="0,0,0,20">
            <DataGrid ItemsSource="{Binding Frequencias}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="{DynamicResource Cartao}"
                      BorderBrush="{DynamicResource Borda}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hz" Binding="{Binding HzFormatted}" Width="*"/>
                    <DataGridTextColumn Header="Duty" Binding="{Binding DutyFormatted}" Width="80"/>
                    <DataGridTextColumn Header="Duração" Binding="{Binding DuracaoFormatted}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Progress -->
        <Border Grid.Row="3"
                Background="{DynamicResource Cartao}"
                BorderBrush="{DynamicResource Borda}"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,20"
                Visibility="{Binding EmExecucao, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{Binding HzAtual, StringFormat='Emitindo: {0}'}"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="#9CAF97"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding ProgressoPercent, StringFormat='{}{0:F0}%'}"
                               FontSize="14"
                               Foreground="{DynamicResource TextoSecundario}"/>
                </Grid>

                <ProgressBar Value="{Binding ProgressoPercent}"
                             Height="25"
                             Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{Binding TempoDecorrido, StringFormat='Decorrido: {0}'}"
                               FontSize="12"
                               Foreground="{DynamicResource TextoSecundario}"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding DuracaoTotal, StringFormat='Total: {0}'}"
                               FontSize="12"
                               Foreground="{DynamicResource TextoSecundario}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Botões -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Iniciar"
                    Command="{Binding IniciarCommand}"
                    Width="100" Height="40"
                    Background="#9CAF97"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Visibility="{Binding EmExecucao, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <Button Content="{Binding Pausado, Converter={StaticResource PausedTextConverter}}"
                    Command="{Binding PausarCommand}"
                    Width="100" Height="40"
                    Background="#F0AD4E"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Visibility="{Binding EmExecucao, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Content="Parar"
                    Command="{Binding PararCommand}"
                    Width="100" Height="40"
                    Background="#D9534F"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Visibility="{Binding EmExecucao, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Content="Fechar"
                    Click="CloseButton_Click"
                    Width="100" Height="40"
                    Background="{DynamicResource Borda}"
                    Foreground="{DynamicResource TextoPrincipal}"/>
        </StackPanel>
    </Grid>
</Window>
