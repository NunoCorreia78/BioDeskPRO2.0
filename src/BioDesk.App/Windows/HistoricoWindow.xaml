<Window x:Class="BioDesk.App.Windows.HistoricoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BioDesk.ViewModels.Windows;assembly=BioDesk.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:HistoricoViewModel}"
        Title="Histórico de Sessões Terapêuticas"
        Height="600" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource FundoPrincipal}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="📊 Histórico de Sessões Terapêuticas"
                   FontSize="24" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextoPrincipal}"
                   Margin="0,0,0,20"/>

        <!-- Filtros -->
        <Border Grid.Row="1"
                Background="{DynamicResource Cartao}"
                BorderBrush="{DynamicResource Borda}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Data Início -->
                <TextBlock Grid.Column="0" Text="De:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource TextoPrincipal}"/>
                <DatePicker Grid.Column="1"
                            SelectedDate="{Binding DataInicio, Mode=TwoWay}"
                            Margin="0,0,15,0"/>

                <!-- Data Fim -->
                <TextBlock Grid.Column="2" Text="Até:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource TextoPrincipal}"/>
                <DatePicker Grid.Column="3"
                            SelectedDate="{Binding DataFim, Mode=TwoWay}"
                            Margin="0,0,15,0"/>

                <!-- Tipo Terapia -->
                <TextBlock Grid.Column="4" Text="Tipo:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource TextoPrincipal}"/>
                <ComboBox Grid.Column="5"
                          ItemsSource="{Binding TiposTerapiaDisplay}"
                          SelectedItem="{Binding TipoFiltro, Mode=TwoWay}"
                          Width="130"
                          Margin="0,0,15,0"/>

                <!-- Botão Filtrar -->
                <Button Grid.Column="6"
                        Content="🔍 Filtrar"
                        Command="{Binding LoadSessionsCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="120"
                        Height="35"
                        FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- DataGrid Sessões -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Sessions}"
                  SelectedItem="{Binding SessaoSelecionada, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#F7F9F6"
                  Background="White"
                  BorderBrush="{DynamicResource Borda}"
                  BorderThickness="1"
                  RowHeight="40"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data/Hora" Binding="{Binding DataHoraInicio, StringFormat='dd/MM/yyyy HH:mm'}" Width="130"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoTerapia}" Width="90"/>
                <DataGridTextColumn Header="Paciente" Binding="{Binding Paciente.Nome}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Protocolos" Binding="{Binding ProtocolosJson}" Width="*" MinWidth="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="FontSize" Value="11"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Frequências (Hz)" Binding="{Binding FrequenciasHzJson}" Width="*" MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="FontSize" Value="11"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Duração (min)" Binding="{Binding DuracaoMinutos}" Width="100"/>
                <DataGridTextColumn Header="Voltagem (V)" Binding="{Binding VoltagemV, StringFormat='F1'}" Width="100"/>
                <DataGridTextColumn Header="Notas" Binding="{Binding Notas}" Width="*" MinWidth="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Notas}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botões Ação -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource TextoSecundario}"
                       FontSize="12">
                <Run Text="{Binding Sessions.Count, Mode=OneWay}"/>
                <Run Text="sessões encontradas"/>
            </TextBlock>

            <Button Grid.Column="1"
                    Content="🔄 Repetir Sessão"
                    Command="{Binding RepetirSessaoCommand}"
                    CommandParameter="{Binding SessaoSelecionada}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="160"
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="0,0,15,0"
                    IsEnabled="{Binding SessaoSelecionada, Converter={StaticResource NullToBooleanConverter}}"/>

            <Button Grid.Column="2"
                    Content="Fechar"
                    IsCancel="True"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    Background="{DynamicResource TextoSecundario}"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
