<Window x:Class="BioDesk.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BioDeskPro 2.0"
        Height="768"
        Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#FCFDFB"
        Closing="MainWindow_Closing"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#9CAF97"
                Padding="20">
            <Grid>
                <TextBlock Text="BioDeskPro 2.0"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ•" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White"/>
                    <TextBlock Text="{Binding DataAtual, StringFormat='dd/MM/yyyy HH:mm'}"
                              FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
    <Border Grid.Row="1"
        Margin="20"
        Background="{StaticResource FundoPrincipal}"
        CornerRadius="16"
        SnapsToDevicePixels="True">
        <ContentControl x:Name="ContentArea"
                  Margin="0"
                  Background="Transparent"
                  ClipToBounds="True"/>
    </Border>

        <!-- Toast Notifications Container -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2"
                   x:Name="ToastContainer"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="0,80,20,0"
                   Panel.ZIndex="1000"/>
    </Grid>
</Window>
