<UserControl x:Class="BioDeskPro.UI.Views.FichaPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:BioDeskPro.UI.ViewModels"
             xmlns:converters="clr-namespace:BioDeskPro.UI.Converters"
             xmlns:tabs="clr-namespace:BioDeskPro.UI.Views.Tabs"
             d:DataContext="{d:DesignInstance Type=viewmodels:FichaPacienteViewModel}"
             mc:Ignorable="d"
             Background="#F8F9FA">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Estilos reutilizados -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4A5568"/>
        </Style>

        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#4A5568"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#2E8B57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#26A249"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#22543D"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#A0AEC0"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E8B57"/>
            <Setter Property="BorderBrush" Value="#2E8B57"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0FDF4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#DCFCE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F7FAFC"/>
                    <Setter Property="Foreground" Value="#2D3748"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Foreground" Value="#2E8B57"/>
                    <Setter Property="BorderBrush" Value="#2E8B57"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Cabeçalho -->
            <RowDefinition Height="Auto"/> <!-- Abas -->
            <RowDefinition Height="*"/>   <!-- Conteúdo -->
        </Grid.RowDefinitions>

        <!-- Cabeçalho do Paciente -->
        <Border Grid.Row="0" Background="White" Padding="24,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Informações do Paciente -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="← Dashboard" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding VoltarDashboardCommand}" 
                            Margin="0,0,16,0"/>
                    
                    <TextBlock Text="{Binding DirtyIndicator}" 
                               Foreground="#E53E3E" 
                               FontSize="16" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    
                    <TextBlock Text="{Binding NomePaciente}" 
                               Style="{StaticResource HeaderTextStyle}"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Text="{Binding IdadePaciente}" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                </StackPanel>

                <!-- Ações Principais -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="💾 Guardar" 
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding GuardarCommand}"/>
                    
                    <Button Content="👁️ Nova Captura Íris" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding NovaCapturaIrisCommand}"/>
                    
                    <Button Content="⚡ Nova Sessão Quântica" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding NovaSessaoQuanticaCommand}"/>
                    
                    <Button Content="📋 Prescrição" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding PrescricaoCommand}"/>
                    
                    <Button Content="✉️ Enviar Mensagem" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding EnviarMensagemCommand}"/>
                </StackPanel>

                <!-- Ações Secundárias -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="📅 Novo Encontro" 
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding NovoEncontroCommand}"/>
                    
                    <Button Content="📊 Histórico" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding HistoricoCommand}"/>
                    
                    <!-- Indicador de alterações -->
                    <TextBlock Text="⚠ Alterações por guardar" 
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="#E53E3E"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"
                               Visibility="{Binding IsDirty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Abas de Navegação -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,1,0,1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Margin="24,0">
                    <ItemsControl ItemsSource="{Binding Abas}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelecionarAbaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding Id}"
                                        Tag="{Binding Id}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{x:Static converters:EqualityConverter.Instance}">
                                                            <Binding Path="Id"/>
                                                            <Binding Path="DataContext.AbaAtiva" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icone}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Nome}"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Conteúdo da Aba Ativa -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="24">
            <Grid>
                <!-- Dados Biográficos Tab -->
                <tabs:DadosBiograficosTab Visibility="{Binding IsDadosBiograficosVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                
                <!-- Placeholder para outras abas (temporário) -->
                <Grid Visibility="{Binding IsOutraAbaVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🚧" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="Conteúdo da aba em desenvolvimento" 
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding AbaAtiva, StringFormat='Aba ativa: {0}'}" 
                                   Style="{StaticResource BodyTextStyle}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- Placeholder quando sem paciente -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding HasPacienteAtivo, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                    <TextBlock Text="👤" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="Nenhum paciente selecionado" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Selecione um paciente para ver a ficha" 
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>