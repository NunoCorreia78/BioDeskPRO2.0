<UserControl x:Class="BioDeskPro.UI.Views.NovoPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Converter para visibilidade -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Style para campos obrigatórios -->
        <Style x:Key="RequiredFieldStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#F44336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style para labels de campos obrigatórios -->
        <Style x:Key="RequiredLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Grid.Row="0" Background="#1976D2" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="👤" FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Novo Paciente" Style="{StaticResource HeaderTextStyle}" Foreground="White"/>
                    <TextBlock Text="Preencha os dados do novo paciente" Style="{StaticResource BodyTextStyle}" Foreground="#E3F2FD"/>
                </StackPanel>

                <!-- Indicador de carregamento -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                           Visibility="{Binding IsGuardando, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Width="20" Height="20" IsIndeterminate="True" Margin="0,0,8,0"/>
                    <TextBlock Text="A guardar..." Style="{StaticResource BodyTextStyle}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Formulário -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <Grid MaxWidth="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Seção 1: Dados Pessoais -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📋 Dados Pessoais" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nome (obrigatório) -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome Completo *" Style="{StaticResource RequiredLabelStyle}"/>
                            <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                     Style="{StaticResource RequiredFieldStyle}" FontSize="14" Padding="8"/>

                            <!-- Data de Nascimento -->
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Data de Nascimento *" Style="{StaticResource RequiredLabelStyle}"/>
                            <DatePicker Grid.Row="2" Grid.Column="2" SelectedDate="{Binding DataNascimento}" FontSize="14" Padding="8"/>

                            <!-- Gênero -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Gênero" Style="{StaticResource BodyTextStyle}"/>
                            <ComboBox Grid.Row="6" Grid.Column="0" ItemsSource="{Binding GenerosDisponiveis}" 
                                      SelectedItem="{Binding Genero}" FontSize="14" Padding="8"/>

                            <!-- Idade (calculada) -->
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="Idade" Style="{StaticResource BodyTextStyle}"/>
                            <TextBox Grid.Row="6" Grid.Column="2" Text="{Binding Idade, StringFormat='{}{0} anos'}" 
                                     IsReadOnly="True" Background="#F5F5F5" FontSize="14" Padding="8"/>

                            <!-- NIF -->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="NIF (opcional)" Style="{StaticResource BodyTextStyle}"/>
                            <TextBox Grid.Row="10" Grid.Column="0" Text="{Binding Nif, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                     FontSize="14" Padding="8" MaxLength="9"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Seção 2: Contactos -->
                <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📞 Contactos" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Email -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Email" Style="{StaticResource BodyTextStyle}"/>
                            <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                     FontSize="14" Padding="8"/>

                            <!-- Telefone -->
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Telefone" Style="{StaticResource BodyTextStyle}"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                     FontSize="14" Padding="8"/>

                            <!-- Morada -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="Morada" Style="{StaticResource BodyTextStyle}"/>
                            <TextBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Morada, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                     FontSize="14" Padding="8"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Seção 3: Observações -->
                <Border Grid.Row="4" Background="#F8F9FA" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📝 Observações" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,16"/>
                        
                        <TextBox Text="{Binding Observacoes, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="80" FontSize="14" Padding="8"
                                 VerticalScrollBarVisibility="Auto"/>
                        
                        <TextBlock Text="{Binding Observacoes.Length, StringFormat='{}Caracteres: {0}/500'}" 
                                   Style="{StaticResource CaptionTextStyle}" 
                                   HorizontalAlignment="Right" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Ações -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Info de campos obrigatórios -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="*" Foreground="#F44336" FontWeight="Bold" FontSize="14" Margin="0,0,4,0"/>
                    <TextBlock Text="Campos obrigatórios" Style="{StaticResource CaptionTextStyle}"/>
                </StackPanel>

                <!-- Botão Limpar -->
                <Button Grid.Column="2" Content="🗑️ Limpar" Command="{Binding LimparCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" Padding="16,8"/>

                <!-- Botão Cancelar -->
                <Button Grid.Column="4" Content="❌ Cancelar" Command="{Binding CancelarCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" Padding="16,8"/>

                <!-- Botão Salvar -->
                <Button Grid.Column="6" Content="💾 Criar Paciente" Command="{Binding SalvarCommand}"
                        Style="{StaticResource PrimaryButtonStyle}" Padding="20,8"
                        IsEnabled="{Binding CanSalvar}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>