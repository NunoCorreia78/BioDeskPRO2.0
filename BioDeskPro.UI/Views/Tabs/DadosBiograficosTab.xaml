<UserControl x:Class="BioDeskPro.UI.Views.Tabs.DadosBiograficosTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Estilos locais -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource SubHeaderTextStyle}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        </Style>
        
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style x:Key="FieldInputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="36"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#CBD5E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>
        
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24" MaxWidth="1000">
            
            <!-- Seção 1: Identificação -->
            <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="#E2E8F0" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="👤 Identificação" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Nome Completo -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                            <TextBlock Text="Nome Completo *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding PacienteAtivo.Nome, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="200"/>
                        </StackPanel>
                        
                        <!-- Data de Nascimento e Género -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Data de Nascimento *" Style="{StaticResource FieldLabelStyle}"/>
                            <DatePicker SelectedDate="{Binding PacienteAtivo.DataNascimento, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource DatePickerStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Género" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox SelectedValue="{Binding GeneroSelecionado, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Masculino"/>
                                <ComboBoxItem Content="Feminino"/>
                                <ComboBoxItem Content="Outro"/>
                                <ComboBoxItem Content="Prefiro não dizer"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- NIF e Estado Civil -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="NIF" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding NifPaciente, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="9"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="Estado Civil" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox SelectedValue="{Binding EstadoCivilSelecionado, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Solteiro(a)"/>
                                <ComboBoxItem Content="Casado(a)"/>
                                <ComboBoxItem Content="União de facto"/>
                                <ComboBoxItem Content="Divorciado(a)"/>
                                <ComboBoxItem Content="Viúvo(a)"/>
                                <ComboBoxItem Content="Separado(a)"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Profissão -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
                            <TextBlock Text="Profissão" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding ProfissaoPaciente, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="100"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Seção 2: Contacto -->
            <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="#E2E8F0" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="📞 Contacto" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Email e Telemóvel -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Email" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding PacienteAtivo.Email, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="150"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Telemóvel" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding PacienteAtivo.Telemovel, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="15"/>
                        </StackPanel>
                        
                        <!-- Telefone Fixo e Contacto Emergência -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Telefone Fixo" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding TelefoneFixo, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="15"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Contacto de Emergência" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding ContactoEmergencia, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="15"/>
                        </StackPanel>
                        
                        <!-- Morada -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                            <TextBlock Text="Morada" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding MoradaPaciente, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="250"/>
                        </StackPanel>
                        
                        <!-- Código Postal e Localidade -->
                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="Código Postal" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding CodigoPostal, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="8"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="3" Grid.Column="2">
                            <TextBlock Text="Localidade" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding LocalidadePaciente, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="100"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Seção 3: Origem -->
            <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="#E2E8F0" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="🔗 Origem" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Como Conheceu -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Como nos conheceu?" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox SelectedValue="{Binding PacienteAtivo.ComoConheceu, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Recomendação de amigo/familiar"/>
                                <ComboBoxItem Content="Pesquisa na Internet"/>
                                <ComboBoxItem Content="Redes sociais"/>
                                <ComboBoxItem Content="Publicidade"/>
                                <ComboBoxItem Content="Médico/Profissional de saúde"/>
                                <ComboBoxItem Content="Feira/Evento"/>
                                <ComboBoxItem Content="Passagem na rua"/>
                                <ComboBoxItem Content="Outro"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Referenciado Por -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Referenciado por" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding RefereciadoPor, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldInputStyle}"
                                     MaxLength="100"
                                     ToolTip="Nome da pessoa/entidade que referenciou"/>
                        </StackPanel>
                        
                        <!-- Data Primeira Consulta -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Data da Primeira Consulta" Style="{StaticResource FieldLabelStyle}"/>
                            <DatePicker SelectedDate="{Binding DataPrimeiraConsulta, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource DatePickerStyle}"/>
                        </StackPanel>
                        
                        <!-- Marketing -->
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Aceita comunicações" Style="{StaticResource FieldLabelStyle}"/>
                            <CheckBox Content="Emails informativos e promoções" 
                                      IsChecked="{Binding AceitaComunicacoes, UpdateSourceTrigger=PropertyChanged}"
                                      Margin="0,8,0,16"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Seção 4: Observações -->
            <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="#E2E8F0" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <TextBlock Text="📝 Observações" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <StackPanel>
                        <TextBlock Text="Notas gerais sobre o paciente" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBox Text="{Binding PacienteAtivo.Observacoes, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FieldInputStyle}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MinHeight="120"
                                 MaxLength="1000"
                                 ToolTip="Informações relevantes sobre o paciente, preferências, restrições, etc."/>
                        
                        <!-- Estatísticas do texto -->
                        <TextBlock Text="{Binding CharacterCount, StringFormat='Caracteres: {0}/1000'}"
                                   FontSize="12"
                                   Foreground="#718096"
                                   HorizontalAlignment="Right"
                                   Margin="0,-12,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    
</UserControl>