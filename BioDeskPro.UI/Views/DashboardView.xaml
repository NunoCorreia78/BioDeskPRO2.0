<UserControl x:Class="BioDeskPro.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:BioDeskPro.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
             mc:Ignorable="d"
             Background="#F8F9FA">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Estilos do Design System -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E8B57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#26804C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E6038"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A0AEC0"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionCardStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F7FAFC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header com Logo e Pesquisa -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo e Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="48" Height="48" Fill="#2E8B57" Margin="0,0,16,0">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.2"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="BioDesk PRO" Style="{StaticResource HeaderTextStyle}" Margin="0"/>
                            <TextBlock Text="{Binding DirtyIndicator}" FontSize="24" Foreground="#FF6B6B" 
                                     Margin="8,0,0,0" VerticalAlignment="Top"
                                     ToolTip="Existem alterações não guardadas"/>
                        </StackPanel>
                        <TextBlock Text="Sistema Integrado de Saúde Natural" Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Pesquisa Global -->
                <Border Grid.Column="1" MaxWidth="400" HorizontalAlignment="Center" Margin="32,0">
                    <Grid>
                        <TextBox Style="{StaticResource SearchBoxStyle}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 KeyDown="SearchBox_KeyDown"/>
                        <Button HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding SearchCommand}">
                            <TextBlock Text="🔍" FontSize="16"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Status e Ações -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="⚙️" Style="{StaticResource ActionButtonStyle}" 
                            Command="{Binding ConfiguracoesCommand}" Margin="0,0,8,0"
                            ToolTip="Configurações"/>
                    <Button Content="🚪" Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding SairCommand}"
                            ToolTip="Sair"/>
                </StackPanel>
            </Grid>
            
            <!-- Contexto do Paciente Ativo -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16"
                    Visibility="{Binding HasPacienteAtivo, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Paciente Ativo" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBlock Text="{Binding PacienteAtivoNome}" FontSize="16" FontWeight="SemiBold" Foreground="#2D3748"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="📋 Novo Encontro" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding NovoEncontroCommand}" Margin="0,0,8,0"/>
                        <Button Content="📚 Histórico" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding VerHistoricoCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Ações Rápidas -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Ações Rápidas" Style="{StaticResource SubHeaderTextStyle}"/>
                    <ItemsControl ItemsSource="{Binding AcoesRapidas}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" Rows="2"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource ActionCardStyle}"
                                        Command="{Binding Command}"
                                        IsEnabled="{Binding IsEnabled}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Icone}" FontSize="32" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Titulo}" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Descricao}" Style="{StaticResource BodyTextStyle}" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Conteúdo Principal -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Pacientes Recentes -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Pacientes Recentes" Style="{StaticResource SubHeaderTextStyle}" Margin="0"/>
                            <Button Content="+ Novo Paciente" Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding NovoPacienteCommand}"
                                    HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <ListView ItemsSource="{Binding PacientesRecentes}"
                                  BorderThickness="0"
                                  Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="0,0,0,4" Background="#F7FAFC" CornerRadius="4"
                                            MouseLeftButtonUp="PacienteItem_Click" Cursor="Hand" Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Nome}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding NumeroUtente, StringFormat='Nº Utente: {0}'}" 
                                                         Style="{StaticResource BodyTextStyle}" FontSize="12"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1" 
                                                     Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                     Style="{StaticResource BodyTextStyle}" FontSize="12"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
                
                <!-- Estado do Sistema -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Estado do Sistema" Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource BodyTextStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Base de Dados:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="✅ Conectada" Style="{StaticResource BodyTextStyle}" Foreground="#2E8B57"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Sincronização:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="📶 Offline (Local)" Style="{StaticResource BodyTextStyle}" Foreground="#ED8936"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Última Sincronização:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Nunca" Style="{StaticResource BodyTextStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>