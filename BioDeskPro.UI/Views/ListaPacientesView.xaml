<UserControl x:Class="BioDeskPro.UI.Views.ListaPacientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:BioDeskPro.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ListaPacientesViewModel}"
             mc:Ignorable="d"
             Background="#F8F9FA">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Estilos reutilizados do Dashboard -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
        </Style>

        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#4A5568"/>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2E8B57"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#2E8B57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#26A249"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#22543D"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#A0AEC0"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E8B57"/>
            <Setter Property="BorderBrush" Value="#2E8B57"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0FDF4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#DCFCE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Gestão de Pacientes" 
                           Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,8"/>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📥 Novo Paciente" 
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding NovoPacienteCommand}" 
                            Margin="0,0,8,0"/>
                    <Button Content="🔄 Atualizar" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding RefreshCommand}"/>
                </StackPanel>

                <!-- Pesquisa -->
                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                         Style="{StaticResource SearchBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,8,0,0">
                </TextBox>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="1" Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" 
                Padding="12,8" Margin="8,0" CornerRadius="4"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="A carregar pacientes..." Style="{StaticResource BodyTextStyle}" 
                       Foreground="#856404" HorizontalAlignment="Center"/>
        </Border>

        <!-- Lista de Pacientes -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,8,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Pacientes" Style="{StaticResource SubHeaderTextStyle}" 
                           Margin="0,0,0,16"/>

                <ListView Grid.Row="1" ItemsSource="{Binding Pacientes}" 
                          SelectedItem="{Binding SelectedPaciente}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          BorderThickness="0"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                                    CornerRadius="6" Margin="0,4" Padding="16,12" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick" 
                                                  Command="{Binding DataContext.SelecionarPacienteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F7FAFC"/>
                                                <Setter Property="BorderBrush" Value="#2E8B57"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nome do Paciente -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="{Binding NomeCompleto}" 
                                               Style="{StaticResource SubHeaderTextStyle}" 
                                               FontSize="16"/>

                                    <!-- Idade -->
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding IdadeText}" 
                                               Style="{StaticResource BodyTextStyle}" 
                                               Margin="16,0,0,0"/>

                                    <!-- Número de Utente -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Style="{StaticResource BodyTextStyle}" 
                                               Margin="0,4,0,0">
                                        <Run Text="Nº Utente:"/>
                                        <Run Text="{Binding NumeroUtente, TargetNullValue='N/A'}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <!-- Email -->
                                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                               Text="{Binding Email, TargetNullValue='Sem email'}" 
                                               Style="{StaticResource BodyTextStyle}" 
                                               Margin="16,4,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Rodapé com ações -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status -->
                <TextBlock Grid.Column="0" Text="{Binding StatusText}" 
                           Style="{StaticResource BodyTextStyle}" 
                           VerticalAlignment="Center"/>

                <!-- Ações do Paciente Selecionado -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            Visibility="{Binding HasSelectedPaciente, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button Content="✏️ Editar" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding EditarPacienteCommand}" 
                            Margin="0,0,8,0"/>
                    <Button Content="🗑️ Eliminar" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding EliminarPacienteCommand}"
                            Foreground="#DC2626" BorderBrush="#DC2626"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>